  sed -i.bak -e '1s,.*,#!/usr/bin/arch -%m perl5.10.0,' git-svn
  NO_FINK=1 NO_DARWIN_PORTS=1 NO_MSGFMT=1 NO_PYTHON=1 make DESTDIR=%d prefix=%p TCLTK_PATH=/usr/bin/wish install
