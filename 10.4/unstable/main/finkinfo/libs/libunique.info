Package: libunique
Version: 1.1.6
Revision: 4
Description: Library for writing single instance applications
Depends: %N-shlibs (= %v-%r)
BuildDepends: pkgconfig, atk1, cairo, dbus-dev, expat1, fontconfig2-dev, freetype219 (>= 2.3.8-1), glib2-dev, glitz, gtk+2-dev, libgettext8-dev, libiconv-dev, libpng3, pango1-xft2-ft219-dev, pixman, x11-dev, gtk-doc, automake1.11, autoconf, libtool2
BuildDependsOnly: true
Source: mirror:gnome:sources/%n/1.1/%n-%v.tar.bz2
Source-MD5: 7955769ef31f1bc4f83446dbb3625e6d
SetCFLAGS: -Os
ConfigureParams: --mandir=%p/share/man --disable-dependency-tracking --enable-gtk-doc
PatchScript: <<
	perl -pi -e "s,\"x11,\"atk,g;s,\(x11,\(atk,g;s,-Werror,,g" configure
	perl -pi -e 's,^(UNIQUE_LIBS .*)$,$1 -lX11,' unique/Makefile.in
<<
InstallScript: make install DESTDIR=%d
DocFiles: AUTHORS COPYING ChangeLog NEWS README TODO
Splitoff: <<
  Package: %N-shlibs
  Description: Library for writing single instance applications, shared library
  Depends: atk1-shlibs, cairo-shlibs, dbus-shlibs, expat1-shlibs, fontconfig2-shlibs, freetype219-shlibs, glib2-shlibs, glitz-shlibs, gtk+2-shlibs, libgettext8-shlibs, libiconv, libpng3-shlibs, pango1-xft2-ft219-shlibs, pixman-shlibs, x11-shlibs
  Files: <<
    lib/libunique-1.0.0.dylib
  <<
  Shlibs: <<
    %p/lib/libunique-1.0.0.dylib 101.0.0 %n (>= 1.0.2-2)
  <<
  DocFiles: COPYING
<<
Splitoff2: <<
  Package: %N-doc
  Description: Library for writing single instance applications, documentation
  Files: <<
    share/gtk-doc
  <<
  DocFiles: COPYING
<<
