SetLDFLAGS: -L%p/lib/system-openssl/lib %p/lib/system-openssl/lib/libssl.dylib %p/lib/system-openssl/lib/libcrypto.dylib
CompileScript: <<
 %p/bin/python%type_raw[python] setup.py build
<<
