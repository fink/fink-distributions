PatchScript: <<
 #!/bin/bash -ev
 cp src/pyexiv2.py .
 cat << EOF > setup.py
from distutils.core import setup, Extension
srcs = ['src/libpyexiv2.cpp','src/libpyexiv2_wrapper.cpp']
setup(name='pyexiv2',
      version='1.0',
      ext_modules=[
        Extension('libpyexiv2', 
                  srcs,
                  libraries=['boost_python','exiv2']), 
        ],
      py_modules=['pyexiv2'],
      )
EOF

<<

