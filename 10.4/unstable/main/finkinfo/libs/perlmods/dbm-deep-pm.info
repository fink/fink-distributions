		perl -pi -e 's#\$\^X#/usr/bin/arch -%m perl%type_raw[perl]#' t/27_filehandle.t
		perl -pi -e 's#\$\^X#"/usr/bin/arch", "-%m", "perl%type_raw[perl]"#' t/39_singletons.t
	fi
<<

