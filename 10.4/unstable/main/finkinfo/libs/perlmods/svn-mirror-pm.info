License: Artistic/GPL
Maintainer: Christian Schaffner <chris01@users.sourceforge.net>

# Dependencies:
Depends: perl%type_pkg[perl]-core, svn (>= 1.4.0-1), svn-client (>= 1.4.0-1), svn-swig-pm%type_pkg[perl] (>= 1.4.2-11), svn-simple-pm%type_pkg[perl] (>= 0.27-1003), uri-pm%type_pkg[perl], data-uuid-pm%type_pkg[perl], vcp-pm%type_pkg[perl], yaml-pm, term-readkey-pm%type_pkg[perl], file-chdir-pm%type_pkg[perl], time-date-pm, class-accessor-pm
