#!/bin/sh -ev
	patch -p3 < %{PatchFile}

	for file in \
		30_pkgconfig.patch \
		99_configure.patch \
	; do
		echo "applying $file"
		patch -p3 < ../../../debian/patches/$file
	done

	echo "NSS is available under the Mozilla Public License Version 1.1/GPL 2.0/LGPL 2.1." > LICENSE
<<
