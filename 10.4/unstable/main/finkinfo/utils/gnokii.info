	expat1,
	fink (>= 0.24.12-1),
	fontconfig2-dev (>= 2.4.2-1),
	freetype219 (>= 2.3.5-1),
	glib2-dev (>= 2.14.0-1),
	glitz,
	gtk+2-dev (>= 2.12.0-1),
	libgettext3-dev,
