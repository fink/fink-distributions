CompileScript: <<
#! /bin/sh -ex
: ${CXX='g++-4.0'}
: ${CC='gcc'}
./configure %c
perl -pi.bak -e "s/^CC=.*/CC=\"$CXX\"/g" libtool
cd lib
make
cd ..
perl -pi.bak -e "s/^CC=.*/CC=\"$CC\"/g" libtool
make
<<
