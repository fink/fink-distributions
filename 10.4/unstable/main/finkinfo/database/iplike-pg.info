BuildDepends: <<
	autoconf (>= 2.60-1),
	automake1.10,
	fink (>= 0.24.12),
	libtool2,
	(%type_raw[postgresql] <= 8.0) postgresql%type_pkg[postgresql]-unified-dev,
	(%type_raw[postgresql] >= 8.1) postgresql%type_pkg[postgresql]-dev,
