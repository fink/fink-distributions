#!/bin/sh -ev
 export F77=no
 export PATH=%p/lib/gettext-tools-0.17/bin:$PATH
 if [ "%type_raw[-svg]" != "-svg" ]; then
  ./configure %c --without-librsvg
 else
  ./configure %c
 fi
