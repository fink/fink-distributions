Depends: python%type_pkg[python], proj-shlibs
BuildDepends: proj
CompileScript: <<
 #!/bin/bash -e
 export PROJ_DIR=%p
 %p/bin/python%type_raw[python] setup.py build
<<
InstallScript: <<
 %p/bin/python%type_raw[python] setup.py install --root %d
<<
