+#endif
+#ifdef IO_DEV_MOTIF_X11
+extern void IOMotifX11SetDev(void);
+#endif
+#ifdef IO_DEV_MOTIF_GL
+extern void IOMotifGLSetDev(void);
+extern void IOMotifGLDSetDev(void);
+#endif
+#ifdef IO_DEV_MOTIF_OGL
