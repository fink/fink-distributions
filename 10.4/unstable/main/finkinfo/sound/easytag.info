Description: Viewing, editing and writing ID3 tags
License: GPL
Maintainer: Hanspeter Niederstrasser <nieder@users.sourceforge.net>
BuildDepends: <<
	atk1 (>= 1.12.3-1),
	cairo (>= 1.2-1),
	flac (>=1.1.1-1),
	fontconfig2-dev (>= 2.3.2-13),
	freetype219,
	gettext-bin,
	gettext-tools,
	glib2-dev (>= 2.12.0-1),
	gtk+2-dev (>=2.10.0-1),
	id3lib4-dev (>=3.8.3-1),
	libgettext3-dev,
	libiconv-dev,
	libogg,
	libvorbis0,
	pango1-xft2-ft219-dev (>= 1.14.9-1),
	pkgconfig (>= 0.21-1),
	x11-dev,
	xft2-dev
<<
Depends: <<
	atk1-shlibs (>= 1.12.3-1),
	flac-shlibs (>=1.1.1-1),
	glib2-shlibs (>= 2.12.0-1),
	gtk+2-shlibs (>= 2.10.0-1),
	id3lib4-shlibs (>=3.8.3-1),
	libgettext3-shlibs,
	libiconv,
	libogg-shlibs,
	libvorbis0-shlibs,
	pango1-xft2-ft219-shlibs (>= 1.14.9-1),
	x11
<<
