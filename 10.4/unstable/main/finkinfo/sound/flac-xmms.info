InstallScript: <<
  #!/bin/sh -ex
  bd=$(cd %b && pwd -P)
  perl -pi -e "s#\Q$bd\E/src/libFLAC#%p/lib#g" src/plugin_xmms/libxmms-flac.la
  cd src/plugin_xmms
  make install DESTDIR=%d 
<<

