NoSetLDFLAGS: true
SetCPPFLAGS: -I%p/include -I/usr/X11R6/include
SetLDFLAGS: -L%p/lib -L%p/lib/fontconfig2/lib -L/usr/X11R6/lib

CompileScript: <<
	%{default_script}
	fink-package-precedence .
<<

InstallScript: make install DESTDIR=%d

