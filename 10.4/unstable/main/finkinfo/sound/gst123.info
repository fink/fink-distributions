Depends: <<
    atk1-shlibs,
    cairo-shlibs,
    freetype219-shlibs,
    fontconfig2-shlibs,
    glib2-shlibs,
    gstreamer-0.10-shlibs,
    gst-plugins-base-0.10-shlibs,
