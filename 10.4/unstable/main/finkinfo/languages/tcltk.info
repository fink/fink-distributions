CompileScript: <<
#!/bin/sh -ev

	pushd tcl%v/unix
		export COMMAND_MODE=legacy
		./configure %c
		make
	popd

	pushd tk%v/unix
		export DYLD_FALLBACK_LIBRARY_PATH=%b/tcl%v/unix
		ac_cv_path_tclsh=%b/tcl%v/unix/tclsh ./configure %c
		make genstubs
		make
	popd
<<
