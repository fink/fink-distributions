# Unpack Phase.
Source: http://download.osgeo.org/mapserver/mapserver-%v.tar.gz
Source-MD5: 26cea03c01096d994e02802fda019ae1

# Compile Phase.
ConfigureParams: <<
  --mandir=%i/share/man \
  --with-gd=%p \
  --with-tiff=%p \
  --with-pdf=%p \
  --with-proj=%p \
  --with-ogr=%p/bin/gdal-config \
  --with-gdal=%p/bin/gdal-config \
  --with-postgis=%p/bin/pg_config \
  --with-ming=%p \
  --with-curl-config=%p/bin/curl-config \
  --with-wfs \
  --with-wcs \
  --with-wmsclient \
  --with-wfsclient
<<
#  --without-geos 

#SetCPPFLAGS: -I%p/include/gdal1
CompileScript: <<
  CXXFLAGS="-I%p/include/gdal1" CPPFLAGS=-I%p/include/gdal1 CFLAGS=-I%p/include/gdal1 ./configure %c
  CPPFLAGS=-I%p/include/gdal1 CFLAGS=-I%p/include/gdal1 make 
<<

# Install Phase.
InstallScript: <<
  mkdir -p %i/share/%n %i/bin

  cp mapserv scalebar shp2img shp2mysql.pl shp2pdf shptree shptreetst sortshp tile4ms %i/bin/

  echo "Creating links for backward compatibility to older fink versions"
  (cd %i/share/%n && ln -s ../../bin/* .)
<<


