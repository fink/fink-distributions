	libgeosc1-shlibs,
	freetype219-shlibs,
	gd2-shlibs (>=2.0.34), 
	gdal-shlibs (>=1.4.0-1001), 
	libtiff-shlibs, proj-shlibs (>=4.5.0), pdflib-shlibs (>= 5.0.3-1003), libming0-shlibs,
	postgresql83,
