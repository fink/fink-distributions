  mv doc/man/*pt_BR.5 %i/share/man/pt_BR/man5
  mv doc/man/*pt_BR.7 %i/share/man/pt_BR/man7
  mv doc/man/gen/*pt_BR.8* %i/share/man/pt_BR/man8
  mv doc/man/gen/*fr.1* %i/share/man/fr/man1
