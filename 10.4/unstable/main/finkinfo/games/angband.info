InstallScript: <<
#!/bin/sh -e
make install DESTDIR=%d bindir=%p/bin
mkdir -p -m 0775 %i/var/games/%n/
chown games:games %i/var/games/%n/
chmod g+w %i/var/games/%n/
find lib/ -exec chown games:games {} \;
find lib/ -exec chmod g+w {} \;
cp -Rp lib %i/var/games/%n/
<<
