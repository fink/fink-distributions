Depends: %N-shlibs (= %v-%r)
BuildDepends: <<
	atk1 (>= 1.12.3-1),
	cairo (>= 1.2-1),
	fontconfig2-dev (>= 2.3.2-13),
	freetype219,
	gettext-bin,
	gettext-tools,
	glib2-dev (>= 2.12.0-1),
	gtk+2-dev (>= 2.10.0-1),
	libart2,
	libgettext3-dev,
	libiconv-dev,
	pango1-xft2-ft219-dev (>= 1.14.9-1),
	pkgconfig (>= 0.21-1),
	x11-dev,
	xft2-dev
<<
