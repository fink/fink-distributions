InstallScript: make install DESTDIR=%d
PostInstScript: <<
  if [ configure = "$1" ]; then
    scrollkeeper-update
    export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
    gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/gthumb.schemas >/dev/null
  fi
<<
PostRmScript: <<
  if [ upgrade != "$1" ]; then
    scrollkeeper-update
  fi
<<
