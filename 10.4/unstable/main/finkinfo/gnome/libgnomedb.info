BuildDepends: atk1, audiofile, esound, gconf2-dev, glib2-dev (>= 2.6.6-1111), gnome-keyring-dev, dbus-dev (>= 0.60-1), libhowl-dev, gnome-vfs2-ssl-dev | gnome-vfs2-dev, gtk+2-dev, gtksourceview-dev, libart2, libbonobo2-dev, libbonoboui2-dev, libgda-dev (>= 1.0.3-1), libgettext3-dev, libglade2, libgnome2-dev, libgnomecanvas2-dev, libgnomeprint2.2-dev, libgnomeui2-dev, libiconv-dev, libjpeg, libxml2 (>= 2.5.2-1), libxslt, orbit2-dev, pango1-xft2-dev, popt, x11-dev, gettext-bin, gettext-tools, readline5, intltool (>= 0.30-1), pkgconfig, automake1.9, libtool14
Depends: %N-shlibs (= %v-%r), scrollkeeper, gconf2
Source:  ftp://ftp.gnome-db.org/pub/gnome-db/sources/v%v/%n-%v.tar.gz
Source-MD5: e6a8bd2d5c3bd5142b721acd3a48dada
Patch: %n.patch
PatchScript: <<
  cp %p/share/libtool/ltmain.sh .
  perl -ni -e 'print unless /-scrollkeeper-update/' doc/Makefile.am
<<
ConfigureParams: --mandir='${prefix}/share/man' --disable-gtk-doc --libexecdir='${prefix}/bin' --disable-schemas-install
CompileScript: <<
  %p/bin/intltoolize -c -f
  autoreconf
  ./configure %c
  make
<<
SplitOff: <<
  Package: %N-shlibs
  Depends: gtksourceview-shlibs, libgda-shlibs, libgnomeui2-shlibs
  Files: lib/lib*.dylib 
  Shlibs: <<
    %p/lib/libgnomedb-2.3.0.0.dylib 3.0.0 %n (>= 1.0.3-1)
  <<
  DocFiles: AUTHORS COPYING ChangeLog INSTALL NEWS README
  Description: Shared libraries for libgnomedb package
<<
SplitOff2: <<
  Package: %N-dev
  Depends: %N-shlibs (= %v-%r)
  DescPackaging: <<
    Uses pkgconfig.
    Any package which BuildDepends on this one must also BuildDepend on:
      glib2-dev (>= 2.6.6-1111), libxml2 (>= 2.5.2-1), libxslt
  <<
  BuildDependsOnly: True
  Files: include lib/lib* lib/pkgconfig share/gtk-doc
  DocFiles: AUTHORS COPYING ChangeLog INSTALL NEWS README
  Description: Developer files for libgnomedb package
<<
DocFiles: AUTHORS COPYING ChangeLog INSTALL NEWS README
PostInstScript: <<
  if [ configure = "$1" ]; then
    scrollkeeper-update
    export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
    gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/libgnomedb.schemas >/dev/null
  fi
<<
PostRmScript: <<
  if [ remove = "$1" ]; then
    scrollkeeper-update
  fi
<<
