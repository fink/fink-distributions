SetCFLAGS: -Os -funroll-loops -fstrict-aliasing -fno-common
SetCPPFLAGS: -fno-common -I%p/lib/freetype219/include/freetype2 -I%p/lib/freetype219/include -I%p/lib/pango-ft219/include -I%p/include
SetLDFLAGS: -L%p/lib/freetype219/lib
SetLIBS: -L%p/lib -lz
SetMAKEFLAGS: -j1
NoSetCFLAGS: true
NoSetCPPFLAGS: true
NoSetLDFLAGS: true
NoSetMAKEFLAGS: true
ConfigureParams: --without-check --libexecdir=%p/lib/%n --mandir=%p/share/man --enable-gtk-doc --disable-dependency-tracking --disable-static --enable-dvdnav --enable-dvdread --enable-tests --enable-failing-tests PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
CompileScript: <<
#!/bin/sh -ex

	export ac_cv_path_PYTHON=%p/bin/python2.4
	./configure %c
	make LIBTOOL=%p/bin/glibtool
<<

InstallScript: <<
#!/bin/sh -ex
	make install DESTDIR=%d
<<
