SetCFLAGS: -Os
ConfigureParams: --mandir=%p/share/man --disable-dependency-tracking --disable-schemas-install --disable-scrollkeeper PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig:$PKG_CONFIG_PATH"
CompileScript: <<
	#!/bin/sh -ev
	export PATH=%p/lib/gettext-tools-0.17/bin:%p/lib/xmkmf/bin:$PATH 
	./configure %c
	make
<<
InstallScript: make install DESTDIR=%d
PostInstScript: <<
	. %p/bin/init.sh
	if [ configure = "$1" ]; then
		scrollkeeper-update
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/gcalctool.schemas >/dev/null
	fi
<<
PostRmScript: <<
	. %p/bin/init.sh
	if [ remove != "$1" ]; then
		scrollkeeper-update
	fi
<<
