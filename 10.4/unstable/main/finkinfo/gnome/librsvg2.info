Package: librsvg2
Version: 2.16.1
Revision: 1

License: GPL/LGPL
Maintainer: Dave Vasilevsky <vasi@users.sourceforge.net>
Description: SAX-based render library for SVG files
Homepage: http://www.gnome.org/

Source: mirror:gnome:sources/librsvg/2.16/librsvg-%v.tar.bz2
Source-MD5: 37e046571097ff7ce77ae6e07f096324


Patch: %n.patch

ConfigureParams: --with-svgz --enable-gnome-vfs --with-croco --enable-gtk-theme --enable-pixbuf-loader --enable-gtk-doc --disable-dependency-tracking --mandir=%p/share/man --with-html-dir=%p/share/doc/%n/html PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" --disable-mozilla-plugin

InstallScript: <<
	make install DESTDIR=%d
<<


DocFiles: AUTHORS COPYING* ChangeLog INSTALL NEWS README TODO

BuildDependsOnly: true
BuildDepends: <<
	cairo (>= 1.2-1),
	fontconfig2-dev (>= 2.3.2-13),
	freetype219,
	xft2-dev,
	pkgconfig (>= 0.21-1),
	
	gtk+2-dev (>= 2.10.0-1),
	atk1 (>= 1.12.3-1),
	
	glib2-dev (>= 2.12.0-1),
	
	libart2			(>= 2.3.10-1),
	
	pango1-xft2-ft219-dev	(>= 1.14.9-1),
	
	popt			(>= 1.5-1),
	
	libgsf-dev		(>= 1.6.0-1),
	libxml2			(>= 2.4.7-1),
	
	dbus-dev (>= 1.0-1),
	libhowl-dev,
	gnome-vfs2-unified-dev (>= 1:2.15.2-3),
	libbonobo2-dev,
	orbit2-dev,
	gconf2-dev (>= 2.16.0-1),
	
	libcroco3,
	
	libgnomeprint2.2-dev,
	
	libgnomeprintui2.2-dev,
	libgnomecanvas2-dev,
	
	x11-dev,
	
	gtk+2 (>= 2.10.0-1),
		
	gtk-doc,
	
	libgettext3-dev,
	libiconv-dev
<<
Depends: %N-shlibs (= %v-%r)


SplitOff: <<
	Package: %N-shlibs
	
	Depends: <<
		gconf2-shlibs (>= 2.16.0-1),
		glib2-shlibs (>= 2.12.0-1),
		gnome-vfs2-unified-shlibs (>= 1:2.15.2-3),
		gtk+2-shlibs (>= 2.10.0-1),
		libart2-shlibs		(>= 2.3.10-1),
		libbonobo2-shlibs,
		libcroco3-shlibs,
		libgettext3-shlibs,
		libgsf-shlibs		(>= 1.6.0-1),
		libiconv,	
		libxml2-shlibs		(>= 2.4.7-1),
		orbit2-shlibs,
		pango1-xft2-ft219-shlibs	(>= 1.14.9-1),
		popt-shlibs			(>= 1.5-1),
		x11
	<<
	
	Files: lib/librsvg-2.*.dylib
	Shlibs: %p/lib/librsvg-2.2.dylib 19.0.0 %n (>= 2.16.0-1)
	DocFiles: COPYING*
<<

SplitOff2: <<
	Package: %N-gtk
	Description: Enable GTK to use SVG data
	
	Depends: %N-shlibs (= %v-%r), gtk+2 (>= 2.10.0-1)
	Replaces: %N (<< 2.6.5-10)
	
	Files: <<
		lib/gtk-2.0/2.10.0/engines/libsvg.so
		lib/gtk-2.0/2.10.0/loaders/svg_loader.so
	<<
	DocFiles: COPYING*
	
	PostInstScript: <<
		if [ configure = "$1" ]; then
			DYLD_FALLBACK_LIBRARY_PATH=: update-gdk-pixbuf-loaders
		fi
	<<
	PostRmScript: <<
		if [ upgrade != "$1" ]; then
			DYLD_FALLBACK_LIBRARY_PATH=: update-gdk-pixbuf-loaders
		fi
	<<
<<

SplitOff3: <<
	Package: %N-bin
	
	Depends: %N-shlibs (= %v-%r)
	Replaces: %N (<< 2.6.5-10)
	
	Files: bin share/man share/pixmaps
	DocFiles: COPYING*
<<

DescPort: <<
	- Put GTK stuff in splitoff.
	- Disable Mozilla plugin, use librsvg2-mozilla to build that.
<<
