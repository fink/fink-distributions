<<
SetCPPFLAGS: -no-cpp-precomp
SetCFLAGS: -Os
ConfigureParams: --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
CompileScript: <<
  F77=no ./configure %c
  make
<<
InstallScript: <<
  GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 make install DESTDIR=%d
<<
PostInstScript: <<
  if [ configure = "$1" ]; then
    scrollkeeper-update
    export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
    gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/gnome-terminal.schemas >/dev/null
  fi
<<
PostRmScript: <<
  if [ upgrade != "$1" ]; then
    scrollkeeper-update
  fi
<<
