SetCFLAGS: -Os -fno-common
SetCPPFLAGS: -fno-common -I%p/lib/freetype219/include/freetype2 -I%p/lib/freetype219/include -I%p/lib/pango-ft219/include -I%p/include
SetLDFLAGS: -L%p/lib/freetype219/lib -L%p/lib/pango-ft219/lib
SetLIBS: -L%p/lib
NoSetCFLAGS: true
NoSetCPPFLAGS: true
NoSetLDFLAGS: true
ConfigureParams: --libexecdir=%p/lib/%n --mandir=%p/share/man --enable-gtk-doc --disable-dependency-tracking --disable-static --enable-tests --enable-failing-tests PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
CompileScript: <<
#!/bin/sh -ex

	export ac_cv_path_PYTHON=%p/bin/python%type_raw[python]
	./configure %c
	make CCLD=g++
<<

InstallScript: <<
#!/bin/sh -ex
	make install DESTDIR=%d examplesdir=%p/share/doc/%N/examples

	# these are in gst-python-0.10-defs instead
	rm -rf %i/share/gst-python/0.10/defs
<<
