CompileScript: <<
#!/bin/sh -ev

export PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH"
export FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config
sh Configure  -d -e -r -s -D prefix="%p" -D 'gtkversion=2' -D privlib='%p/share/gtk-gnutella' -D sysman='%p/share/man' -D libpth='%p/lib/pango-ft219/lib %p/lib/freetype219/lib %p/lib/fontconfig2/lib %p/lib /usr/lib' -Doffficial=true -A define:zlib=yes -Dldflags='-lz'
make
<<
InstallScript: <<
  make install INSTALL_PREFIX=%d
<<
