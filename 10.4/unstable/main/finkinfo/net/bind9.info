SetCFLAGS: -Os -fstrict-aliasing
SetLIBRARY_PATH: %p/lib
NoSetLDFLAGS: true
NoSetCPPFLAGS: true
ConfigureParams: <<
 --mandir=%i/share/man --infodir=%p/share/info \
 --with-libtool --enable-libbind --enable-threads --with-dlz-filesystem=yes --with-dlz-bdb=%p --with-dlz-stub=yes \
 (%type_raw[ssl] = -ssl) --with-dlz-postgres=yes (%type_raw[ssl] = -ssl) --with-dlz-mysql=%p \
