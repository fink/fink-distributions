InstallScript: <<
 #!/bin/sh -ev
 case %m in
   powerpc) machine=ppc;;
   i386) machine=x86;;
   x86_64) machine=x86_64;;
 esac
  mkdir %i/bin
 cp bin.macosx$machine/* %i/bin 
