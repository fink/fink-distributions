PatchScript: <<
	grep -Rl /usr/local * |xargs perl -pi -e "s,/usr/local,%i,g"
	grep -Rl /usr/share * |xargs perl -pi -e "s,/usr/share,%i/share,g"
<<
CompileScript: <<
	#!/bin/bash -ev
	export QTDIR=%p/lib/qt4-x11
	export PATH=$QTDIR/bin:$PATH
	cmake -DCMAKE_INSTALL_PREFIX:PATH=%i .
	make
<<
