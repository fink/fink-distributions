CompileScript: <<
#!/bin/sh -ev

	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4-buildenv.sh

	mkdir -p build
	pushd build
		cmake -DBUILD_kgpg:BOOL=OFF $KDE4_CMAKE_ARGS ..
		make VERBOSE=1
	popd
<<

