CompileScript: <<
#!/bin/sh -ev

	mkdir build
	pushd build
		cmake -DCMAKE_INSTALL_PREFIX=%p -DICONV_INCLUDE_DIR=%p/include -DICONV_LIBRARIES=%p/lib/libiconv.dylib ..
		make VERBOSE=1
	popd
<<

InstallScript: <<
#!/bin/sh -ev
	pushd build
		make -j1 install/fast DESTDIR=%d
	popd
	perl -pi -e 's,%b,,g' %i/lib/*.la
<<
