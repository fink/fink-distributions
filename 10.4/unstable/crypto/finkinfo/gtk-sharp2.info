PatchScript: 	perl -pi -e 's,^INCLUDES =,INCLUDES = \$(BUILD_GTK_CFLAGS),' vte/glue/Makefile.in

SetMAKEFLAGS: -j1
NoSetLDFLAGS: true
NoSetMAKEFLAGS: true
ConfigureParams: --mandir=%p/share/man --disable-static --disable-dependency-tracking
CompileScript: <<
#!/bin/sh -ex

	export ac_cv_path_MONODOCER=no lt_cv_sys_max_cmd_len=65536 CPPFLAGS="-I%p/lib/freetype219/include $CPPFLAGS" PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" PATH="%p/lib/freetype219/bin:$PATH"
	./configure %c
	make
<<

InstallScript: <<
#!/bin/sh -ex

	export MONO_PATH="%i/lib:$MONO_PATH"
	make install DESTDIR=%d
	install -d -m 755 %i/share/%n/sample
	cp -R sample/* %i/share/%n/sample/
<<
