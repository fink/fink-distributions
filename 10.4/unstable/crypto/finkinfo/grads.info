BuildDepends: netcdf (>= 3.6.0-1002), x11-dev, readline (>= 4.3-1028), gd2
Depends: netcdf-shlibs (>= 3.6.0-1002), hdf (>= 4.2r0-3), dods (>= 3.4.5-1005), readline-shlibs (>= 4.3-1028), gd2-shlibs, x11, udunits, openssl097-shlibs
PatchScript: sed 's|@PREFIX@|%p|g' <  %a/%n.patch | patch -p1
SourceDirectory: %n-%vb3
ConfigureParams: --with-hdf --with-dods --with-lats --with-nc --with-readline --with-printim --without-gui
CompileScript: <<
 #!/bin/sh -ev
 export DODSDIR=%p/lib/dods
 export SUPPLIBS=%p
 ./configure %c
 make
<<
InstallScript: <<
 make install prefix=%i
 mkdir -p %i/lib/%n
 cp -R data/* %i/lib/%n
<<
