#!/bin/sh -ev

	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4-buildenv.sh

	mkdir -p build
	pushd build
		cmake \
			-DBUILD_po:BOOL=OFF \
			-DGPOD_INCLUDE_DIR:PATH=%p/include/gpod-1.0 -DGPOD_LIBRARIES:FILEPATH=%p/lib/libgpod.dylib \
