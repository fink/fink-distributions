PatchScript: <<
	%{default_script}
	perl -pi -e 's/(LIBSOUP_GNOME_REQUIRED\s*=).*/${1}99999.FORCE.NONDETECT/' configure
<<
SetCPPFLAGS: -I%p/lib/fontconfig2/include
