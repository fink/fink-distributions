PatchScript: rm 'teg_theme.xml~'
CompileScript: echo "No compilation necessary"
InstallScript: <<
	#!/bin/sh -ev
	src=`dirname %b`
	dest=share/pixmaps/teg_pix/themes
	install -d -m 755 %i/$dest
	for i in IRL realist tworld; do
		mv $src/$i %i/$dest/
	done
