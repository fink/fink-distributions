SplitOff: <<
	Package: %n-dev
	Depends: %N (= %v-%r)
	BuildDependsOnly: true
	Files: <<
		include
		lib/libttkstub.a
	<<
	DocFiles:ANNOUNCE.txt ChangeLog README.txt license.terms
<<
