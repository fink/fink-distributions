	%{default_script}
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=%n-dev .
<<
InstallScript: <<
	make install DESTDIR=%d
<<
DocFiles:ANNOUNCE.txt ChangeLog README.txt license.terms
