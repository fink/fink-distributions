BuildDepends: <<
	libjasper.1,
	libpng15
<<
BuildDependsOnly: true

SetLDFLAGS: -Wl,-dead_strip_dylibs

ConfigureParams: <<
	--disable-dependency-tracking \
	--disable-static
<<

