InstallScript: <<
	#!/bin/sh -ev
	install -d %i/lib/lapack/pkgconfig
	install *.pc %i/lib/lapack/pkgconfig
	install -d %i/lib/lapack/%v
	install *.dylib %i/lib/lapack/%v
	install *.a %i/lib/lapack
	install SRC/VARIANTS/LIB/*.a %i/lib/lapack
<<

