  atk1 (>= 1.24.0-1),
  cairo (>= 1.8.0-3),
  expat1,
  fontconfig2-dev (>= 2.4.1-5),
  freetype219 (>= 2.3.7-7),
  libgettext8-dev,
  glib2-dev (>= 2.18.1-2),
  glitz,
  gtk+2-dev (>= 2.12.11-2),
  intltool40,
  libiconv-dev,
  libpng3,
  libxml2 (>= 2.6.30-1),
  pango1-xft2-ft219-dev (>= 1.22.0-1),
  pixman (>= 0.12.0-1),
  pkgconfig (>= 0.23-1),
  x11-dev,
  xft2-dev
<<
