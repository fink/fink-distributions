PatchScript: <<
	perl -pi -e 's,gedit-2.16,gedit-2.20,g; s,gtksourceview-1.0,gtksourceview-2.0,g' configure
	perl -pi -e 's|#\!\s*/usr/bin/env\s+python.*|#\!%p/bin/python2.5|' `find . -name \*.py -o -name \*.in`
<<
SetLIBS: -L%p/lib
ConfigureParams: --with-plugins=all --disable-scrollkeeper --disable-schemas-install --mandir=%p/share/man --disable-dependency-tracking PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:%p/lib/fontconfig2/lib/pkgconfig:%p/lib/freetype219/lib/pkgconfig:$PKG_CONFIG_PATH" FREETYPE_CONFIG=%p/lib/freetype219/bin/freetype-config PYTHON=%p/bin/python2.5
InstallScript: <<
	GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 make -j1 install DESTDIR="%d"
<<
PostInstScript: <<
	if [ configure = "$1" ]; then
		scrollkeeper-update
		export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
		gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/gedit-show-tabbar-plugin.schemas >/dev/null
	fi
 [ -x %p/bin/update-desktop-database ] && update-desktop-database -q || :
<<
PostRmScript: <<
	if [ upgrade != "$1" ]; then
		scrollkeeper-update
	fi
 [ -x %p/bin/update-desktop-database ] && update-desktop-database -q || :
<<
