Patch: %n.patch
PatchScript: <<
 perl -pi.bak -e "s/-scrollkeeper-update/#-scrollkeeper-update/g" omf.make docs/*/Makefile.in
 perl -pi -e 's/hardcode_direct=yes/hardcode_direct=no/g' configure
<<
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
ConfigureParams: --mandir=%p/share/man --libexecdir=%p/lib/%n
InstallScript: <<
#!/bin/sh -ex
  make install DESTDIR=%d
  # these are provided by file-roller
  rm -rf %i/var/scrollkeeper
  sed -e 's;-L%b/vicious-extensions -lviciousui;;' < %i/lib/gtk-2.0/modules/libdwellmouselistener.la > %i/lib/gtk-2.0/modules/libdwellmouselistener.la.tmp
  mv -f %i/lib/gtk-2.0/modules/libdwellmouselistener.la.tmp %i/lib/gtk-2.0/modules/libdwellmouselistener.la
  sed -e 's;-L%b/vicious-extensions -lviciousui;;' < %i/lib/gtk-2.0/modules/libkeymouselistener.la > %i/lib/gtk-2.0/modules/libkeymouselistener.la.tmp
  mv -f %i/lib/gtk-2.0/modules/libkeymouselistener.la.tmp %i/lib/gtk-2.0/modules/libkeymouselistener.la
<<
PostInstScript: <<
  if [ configure = "$1" ]; then
    scrollkeeper-update -q
  fi
<<
PostRmScript: <<  
  if [ remove != "$1" ]; then
    scrollkeeper-update -q
  fi
<<
