PatchFile: psutils.patch
PatchFile-MD5: 6d3933587d9cc68afb5573c42b6c84a5
PatchScript: <<
patch -p1 < %{PatchFile}
ruby -i -pe '$_.sub!(/(PAPER=)a4/, "\\1%type_pkg[paper]")' Makefile.unix
ruby -i -pe '$_.sub!(/void main/, "int main")' *.c
