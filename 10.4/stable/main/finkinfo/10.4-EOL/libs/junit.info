CompileScript: ant
InstallScript: <<
#!/bin/sh -ex
	mkdir -p %i/share/doc/%n
	cp -r %n%v/doc/* %n%v/javadoc %i/share/doc/%n
	pushd %n%v
	jar -cvf %i/share/doc/%n/%nTests.jar junit/samples/*.class junit/samples/*/*.class
<<
