	/bin/mv %i/bin/instant-showcache %i/bin/instant-showcache-py%type_pkg[python]
	/bin/mv %i/share/man/man1/instant-showcache.1.gz %i/share/man/man1/instant-showcache-py%type_pkg[python].1.gz
<<

