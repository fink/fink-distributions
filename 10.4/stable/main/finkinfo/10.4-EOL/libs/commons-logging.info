		-Dapi.jar.name=%n-api.jar \
		-Dadapters.jar.name=%n-adapters.jar \
		-Dsource.version=1.4 \
		-Dtarget.version=1.4
	javadoc -sourcepath src/java -d api `find src/java -name \*.java`
