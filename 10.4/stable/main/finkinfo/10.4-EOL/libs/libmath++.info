BuildDepends: autoconf (>= 2.60-1), automake1.9, doxygen, fink (>= 0.24.12), libtool14
CompileScript: <<
#!/bin/sh -ex

export WANT_AUTOMAKE="1.7"
export WANT_AUTOCONF_2_5=1

aclocal &&
autoheader -f &&
autoconf -f &&
glibtoolize --automake -c -f &&
automake -a -c -f

./configure %c
make
pushd doc
make api-doc
popd
<<
InstallScript: <<
#!/bin/sh -ex
 make install DESTDIR="%d"
 ranlib %i/lib/*.a
 install -d -m 755 "%i/share/doc/%N"
 mv doc/user-api "%i/share/doc/%N/"
<<
