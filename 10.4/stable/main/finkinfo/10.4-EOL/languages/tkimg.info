CompileScript: <<
#!/bin/bash -ev
if [ "%m" = "i386" ]; then
  find . -name configure | xargs perl  -pi -e 's/-arch ppc/-arch i386/g'
elif [ "%m" = "x86_64" ]; then
  find . -name configure | xargs perl  -pi -e 's/-arch ppc/-arch x86_64/g'
fi
./configure --prefix=%i --exec-prefix=%i --mandir=%p/share/man --infodir=%p/share/info --with-tcl=%p/lib --with-tk=%p/lib
make
<<
InstallScript:<<
#!/bin/zsh -evf
foreach dylib in $( /bin/ls **/*.dylib ) 
    install_name_tool -id  %p/lib/Img%v/$(basename $dylib)   $dylib
end
make install  
<<
