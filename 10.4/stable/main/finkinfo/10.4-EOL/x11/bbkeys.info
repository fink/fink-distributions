InstallScript: <<
#!/bin/sh -ev
 export PATH=%p/lib/xmkmf/bin:$PATH 
 export IMAKEINCLUDE=-I%p/lib/X11/config
 make install DESTDIR=%d
 # clean up make install's mess
 rm -r %i/doc
 mkdir -p %i/share
 mv %i/man %i/share/
<<
