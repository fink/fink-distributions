+	f->type = fz_invalid;
+	f->virtual_pos = 0;
+	f->virtual_size = 0;
+	f->real_offset = 0;
+	f->real_size = 0;
+	f->data_read = 0;
+	f->data_write = 0;
+	f->f = 0;
