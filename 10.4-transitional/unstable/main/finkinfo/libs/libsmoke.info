	Files: <<
		lib/libsmokeqt.*.dylib
		lib/libsmokekde.*.dylib
	<<
	Shlibs: <<
		%p/lib/libsmokeqt.1.dylib 4.0.0 %N-shlibs (>= 3.009-1)
		%p/lib/libsmokekde.1.dylib 4.0.0 %N-shlibs (>= 1:3.5.2-1)
	<<
<<

