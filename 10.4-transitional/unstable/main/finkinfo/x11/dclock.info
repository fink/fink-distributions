mv Imakefile Imakefile.orig
cat Imakefile.orig | sed -e 's/dclock\./littledclock\./' > Imakefile
mv Dclock.c Dclock.c.orig
cat Dclock.c.orig | sed -e 's|#include <values.h>||' > Dclock.c
