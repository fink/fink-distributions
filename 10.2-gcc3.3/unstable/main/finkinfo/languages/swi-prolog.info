PatchScript: <<
  cd packages/xpce/src ; mv Makefile.in Makefile.in.orig
  cd packages/xpce/src ; sed 's/@LDSOFLAGS@/@LDSOFLAGS@ @LDFLAGS@/' < Makefile.in.orig > Makefile.in
