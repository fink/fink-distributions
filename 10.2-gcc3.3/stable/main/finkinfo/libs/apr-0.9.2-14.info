Package: apr
Version: 0.9.2
Revision: 14
Description: Apache Portable Runtime
License: BSD
Maintainer: Christian Schaffner <chris01@users.sourceforge.net>

# Dependencies:
Depends: %N-shlibs (= %v-%r)
BuildDepends: expat (>= 1.95.3-1), fink (>= 0.11.0-1), dlcompat-dev, gdbm (>= 1.8.0-6), db4 (>= 4.0.14-22), libiconv-dev
BuildDependsOnly: True
Conflicts: svn-client (<< 0.14.3-1), apache2    
GCC: 3.3

# Unpack Phase:
#Source: http://www.apache.org/dist/httpd/httpd-2.0.44.tar.gz
Source: http://www.apache.org/dist/httpd/old/httpd-2.0.44.tar.gz
Source-MD5: 786c8d62bf18c6c88d2d82a9443cd1e1
SourceDirectory: httpd-2.0.44/srclib

# Patch Phase:
PatchScript: <<
perl -pi.bak -e "s#need_relink=yes#need_relink=no#" apr/build/ltmain.sh
perl -pi.bak -e "s#need_relink=yes#need_relink=no#" apr-util/xml/expat/conftools/ltmain.sh
<<

# Compile Phase:
ConfigureParams: --libexecdir='${prefix}/lib/apr-0' --datadir='${prefix}/share/apr-0' --sysconfdir='${prefix}/etc/apr-0' --sharedstatedir='${prefix}/share/apr-0' --includedir='${prefix}/include/apr-0' --mandir='${prefix}/share/man' --infodir='${prefix}/share/info' --with-expat=%p
SetCPPFLAGS: -no-cpp-precomp
CompileScript: <<
 cd apr; ./configure %c
 cd apr; make
 cd apr-util; ./configure %c --with-apr=%b/apr
 cd apr-util; make
<<

# Install Phase:
DocFiles: ../ABOUT_APACHE ../LICENSE apr/docs/*.html apr/CHANGES:CHANGES_apr.txt apr-util/CHANGES:CHANGES_apr-util.txt
InstallScript: <<
 cd apr; make install prefix=%i
 cd apr-util; make install prefix=%i
<<
