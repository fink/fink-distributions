Patch: %{ni}.patch
PatchScript: <<
  perl -pi -e 's|#\!\s*/usr/bin/env\s+python.*|#\!%p/bin/python%type_raw[python]|' `find examples -name \*.py` codegen/*.py tests/*.py
  perl -pi -e 's|(--basedir)\s+(\$\(DESTDIR\))|--destdir $2 $1 |' `find . -name Makefile.in`
<<
