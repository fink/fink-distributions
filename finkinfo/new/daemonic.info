  make install prefix=%i
  mkdir -p %i/etc/bash_completion.d
  install -m755 bash_completion %i/etc/bash_completion.d/daemonic
  mkdir -p %i/sbin
  install -m755 daemonic.init %i/sbin/
  install -m755 daemonic.init.run %i/sbin/
