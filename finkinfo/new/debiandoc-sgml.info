mkdir %i/etc/sgml/catalog.d
mv %i/etc/sgml/debiandoc-sgml.cat  %i/etc/sgml/catalog.d/debiandoc-sgml
perl -pi -e 's,CATALOG ,,g' %i/etc/sgml/catalog.d/debiandoc-sgml
<<
