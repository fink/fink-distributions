	fink (>= 0.32-1),
	fink-package-precedence (>= 0.7-1),
	flag-sort (>= 0.4-1),
	fontconfig2-dev (>= 2.10.0-1),
	freetype219 (>= 2.4.11-1),
	gtk-doc (>= 1.17-2),
	pixman (>= 0.28.2-1),
	pkgconfig (>= 0.23-1),
	libpng15,
	x11-dev
<<
