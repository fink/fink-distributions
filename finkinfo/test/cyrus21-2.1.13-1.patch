+#debug_command: /usr/bin/gdb -batch -cd=/tmp -x @FINKPREFIX@/lib/cyrus/get-backtrace.gdb @FINKPREFIX@/lib/cyrus/bin/%s %d >/tmp/gdb-backtrace.cyrus.%1$s.%2$d <&- 2>&1 &
