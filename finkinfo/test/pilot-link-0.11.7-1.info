Package: pilot-link
Version: 0.11.7
Revision: 1
###
Depends: x11, libpng3-shlibs, readline-shlibs, tcltk-shlibs, %N-shlibs (= %v-%r)
BuildDepends: fink (>= 0.9.9), libpng3, readline, tcltk, tcltk-dev, python22 | python22-nox
BuildDependsOnly: true
###
Source: http://pilot-link.org/source/%n-%v.tar.bz2
Source-MD5: 7d06c1101707125b1e385dbd3cd7ce91
###
Patch: %f.patch
###
GCC: 3.1
###
NoSetLDFLAGS: true
SetLIBS: -L%p/lib
SetCPPFLAGS: -no-cpp-precomp
###
ConfigureParams: --without-perl --with-pic --with-readline --enable-shared --enable-static --with-tcl=%p --without-itcl --with-tk=%p --without-java --with-python --with-libiconv --with-libpng --disable-debug --mandir=%i/share/man --infodir=%p/share/info --libexecdir=%p/lib
###
DocFiles: COPYING*
###
Splitoff: <<
  Package: %N-shlibs
  Depends: readline-shlibs
  Files: <<
    lib/libpisock.*.dylib 
    lib/libpisock++.*.dylib
    lib/libpisync.*.dylib
  <<
  Shlibs: <<
    %p/lib/libpisock.8.dylib 9.0.0 %n (>= 0.11.7-1)
    %p/lib/libpisock++.0.dylib 1.0.0 %n (>= 0.11.7-1)
    %p/lib/libpisync.0.dylib 1.0.0 %n (>= 0.11.7-1)
  <<
  DocFiles: AUTHORS COPYING* ChangeLog INSTALL NEWS README
<<
Splitoff2: <<
  Package: %N-bin
  Depends: libpng3-shlibs, readline-shlibs, tcltk-shlibs, %N-shlibs (= %v-%r)
  Files: <<
    bin
    share/man
    share/pilot-link
  <<
  DocFiles: COPYING*
<<
Splitoff3: <<
  Package: %N-python
  BuildDepends: python22 | python22-nox
  Files: <<
    lib/python2.2
  <<
  Docfiles: bindings/Python/NEWS bindings/Python/README bindings/Python/TODO
<<
