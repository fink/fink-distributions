CompileScript: echo "Nothing to do ..."
InstallScript: <<
 mkdir -p %i/share/doc/tetex-texmf
 cp ChangeLog LICENSE.texmf %i/share/doc/tetex-texmf
 mkdir -p %i/share/texmf
 mv * %i/share/texmf
 chown -R root:admin %i/share/texmf
<<
#ConfFiles: %p/share/texmf/web2c/mktex.cnf
PostInstScript: <<
 echo "Adjusting permissions ..."
 chmod -R a+rX %p/share/texmf

 echo "Correcting an error in the old tetex-base package ..."
 if [ -f %p/var/lib/dpkg/info/tetex-base.prerm ] ; then mv %p/var/lib/dpkg/info/tetex-base.prerm  %p/var/lib/dpkg/info/tetex-base.prerm.bak; sed "s|rm\ -Rf\ /sw/share/texmf/tex/context|\ |g" <  %p/var/lib/dpkg/info/tetex-base.prerm.bak >  %p/var/lib/dpkg/info/tetex-base.prerm; rm  %p/var/lib/dpkg/info/tetex-base.prerm.bak; fi
<<
