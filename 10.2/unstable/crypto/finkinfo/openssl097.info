  PostInstScript: <<
   update-alternatives --install %p/share/man/man3/md5.3 md5.3  %p/share/man/man3/md5.3.%N 60
  <<
  PreRmScript: <<
   if [ $1 != "upgrade" ]; then
    update-alternatives --remove md5.3 %p/share/man/man3/md5.3.%N
   fi
  <<
<<
