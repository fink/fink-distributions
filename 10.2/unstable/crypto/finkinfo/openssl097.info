  Files: lib/libcrypto.0.9.7.dylib lib/libssl.0.9.7.dylib
  Shlibs: <<
    %p/lib/libcrypto.0.9.7.dylib 0.9.7 %n (>= 0.9.7-1)
    %p/lib/libssl.0.9.7.dylib 0.9.7 %n (>= 0.9.7-1)
