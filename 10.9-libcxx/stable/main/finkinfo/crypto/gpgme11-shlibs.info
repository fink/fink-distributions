PatchScript: <<
	%{default_script}
	perl -pi -e 's/(no_undefined =)\s*$/\1 -no-undefined/' src/Makefile.am
	# libassuan API v3 maintains compat with API v2.
	cp %p/share/aclocal/libassuan.m4 m4
<<
