	Package: libgcrypt20
	Depends: %N (= %v-%r)
	BuildDependsOnly: true
	Conflicts: <<
		libgcrypt,
		libgcrypt20
	<<
	Replaces: <<
		libgcrypt,
		libgcrypt20
	<<
	Files: <<
		bin
		include
