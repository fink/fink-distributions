	fink-package-precedence,
	libassuan9 (>= 3.0.0),
	libcurl4,
	libgcrypt20 (>= 1.11.0-1),
	libgettext8-dev,
	libgpg-error (>= 1.51-2),
	libiconv-dev,
	libksba8 (>= 1.6.3-1),
	libssh2.1,
	libusb1,
	npth (>= 1.2-1),
	ntbtls (>= 0.2.0-1),
	openldap2-dev,
	pkgconfig,
	readline8,
	sqlite3-dev,
	texinfo (>= 6.8)
<<
