	bzip2-shlibs,
	libassuan9-shlibs (>= 3.0.0),
	libcurl4-shlibs,
	libgcrypt20-shlibs (>= 1.11.0-1),
	libgettext8-shlibs,
	libgpg-error-shlibs (>= 1.51-2),
	libiconv,
	libksba8-shlibs (>= 1.6.3-1),
	libusb1-shlibs,
	npth-shlibs (>= 1.2-1),
	ntbtls-shlibs (>= 0.2.0-1),
	openldap2-shlibs,
	readline8-shlibs,
	sqlite3-shlibs
<<
