	# internal-use-only dependency (not public API)
	perl -pi -e 's/-lgcrypt//' src/ntbtls-config.in
	perl -pi -e 's/libgcrypt,//' src/ntbtls.pc.in
<<
CompileScript: <<
	./configure %c
	make no_undefined=-no-undefined
	fink-package-precedence --prohibit-bdep=%n .
<<

