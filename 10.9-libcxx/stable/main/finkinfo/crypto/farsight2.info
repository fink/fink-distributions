Revision: 2
BuildDependsOnly: true
Depends: %N-shlibs (= %v-%r)
BuildDepends: <<
	fink-package-precedence,
	glib2-dev,
	gst-plugins-base-0.10-dev (>= 0.10.34-1),
	gstreamer-0.10-dev (>= 0.10.35-1),
	libgssdp-dev (>= 0.6.4-4),
	libgupnp-dev (>= 0.12.8-2),
	libgupnp-igd (>= 0.1.3-2),
	libiconv-dev,
        libnice10 (>= 0.1.0-2),
	libsoup2.4.1-ssl (>= 2.32.0-1),
	libxml2 (>= 2.9.1-1),
	pkgconfig
<<
Source: http://farsight.freedesktop.org/releases/%n/%n-%v.tar.gz
Source-MD5: 9003882422152a0e333c1a6885a01082
SetCFLAGS: -Os
ConfigureParams: --mandir=%p/share/man --enable-dependency-tracking --disable-python PYTHON=/usr/bin/python --disable-static PKG_CONFIG_PATH="%p/lib/glib-2.0/pkgconfig-strict:$PKG_CONFIG_PATH"
InstallScript: <<
	fink-package-precedence --prohibit-bdep=%n .
	make install DESTDIR=%d
	grep -rl /usr %i/share/gtk-doc/html/* |xargs perl -pi -e "s,/usr,%p,g"
<<
