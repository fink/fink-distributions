InstallScript: <<
	#!/bin/sh -ev
	scons \
		--prefix=%i \
		--ssl \
		--use-system-boost \
		--use-system-pcre \
		--use-system-snappy \
		--use-system-zlib \
		install \
		CCFLAGS=-MD \
		CPPPATH="%p/opt/boost-1_68/include %p/include" \
		LIBPATH="%p/opt/boost-1_68/lib %p/lib"

	# Create path for databases and logs
	install -d -m 755 %i/var/db/mongodb %i/var/log/mongodb
	
	# install files from Debian
	install -d -m 755 %i/share/man/man1
	cp -p debian/*.1 %i/share/man/man1
	install -d -m 755 %i/etc
	cp -p debian/mongod.conf %i/etc/mongod.conf.example
<<
