SetCPPFLAGS: -MD -I%p/opt/boost-1_68/include
SetLDFLAGS: -L%p/opt/boost-1_68/lib
NoSetMAKEFLAGS: true
CompileScript: <<
	#!/bin/sh -ev
	# modernize files to newer python syntax
	/usr/bin/2to3-2.7 --write --fix=print SConstruct \
		src/third_party/wiredtiger/SConscript \
		src/mongo/installer/msi/SConscript
	scons \
		--ssl \
		--use-system-boost \
		--use-system-pcre \
		--use-system-snappy \
		--use-system-zlib \
		all \
		$MAKEFLAGS \
		CCFLAGS=-MD \
		CPPPATH="%p/opt/boost-1_68/include %p/include" \
		LIBPATH="%p/opt/boost-1_68/lib %p/lib"
	fink-package-precedence --depfile-ext='\.d' .
<<
