PatchScript: <<
#!/bin/sh -ev
	[ -x /usr/bin/python ] || pyversion=3
	/usr/bin/find . -type f -name "*.py" -exec perl -pi -e "s|/usr/bin/env python|/usr/bin/python$pyversion|g" {} \;
<<

CompileScript: <<
#!/bin/sh -ev
	[ -x /usr/bin/python ] || pyversion=3
	/usr/bin/python$pyversion bootstrap.py build/scons
<<

InstallScript: <<
#!/bin/sh -ev
	[ -x /usr/bin/python ] || pyversion=3
	pushd build/scons
	/usr/bin/python$pyversion setup.py install --prefix=%p --root=%d
	mkdir -p %i/share
	mv %i/man %i/share
<<

