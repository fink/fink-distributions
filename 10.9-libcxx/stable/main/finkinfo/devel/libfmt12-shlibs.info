CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-cmake.sh
	mkdir finkbuild
	pushd finkbuild
		cmake $FINK_CMAKE_ARGS \
			-DBUILD_SHARED_LIBS=ON \
			..
		make -w
	popd
<<
