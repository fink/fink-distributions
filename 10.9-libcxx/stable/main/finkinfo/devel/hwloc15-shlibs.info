Package: hwloc15-shlibs
Version: 2.9.0
Revision: 1
Source: https://download.open-mpi.org/release/hwloc/v2.9/hwloc-%v.tar.bz2
Source-Checksum: SHA256(2070e963596a2421b9af8eca43bdec113ee1107aaf7ccb475d4d3767a8856887)
BuildDepends: <<
	cairo,
	libncurses5,
	libxml2 (>= 2.9.12-3)
<<
Depends: <<
	libxml2-shlibs (>= 2.9.12-3)
<<
PatchScript: <<
	perl -pi -e 's|-framework |-Wl,-framework,|g' configure
<<
ConfigureParams: <<
	--without-x \
	--libexecdir=%p/lib \
	--disable-silent-rules
<<
InstallScript: <<
	make install DESTDIR=%d
<<
InfoTest: TestScript: make check || exit 2
Shlibs: <<
	%p/lib/libhwloc.15.dylib 22.0.0 %n (>= 2.9.0-1)
<<
