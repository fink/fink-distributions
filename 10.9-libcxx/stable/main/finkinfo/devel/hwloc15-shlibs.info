	Package: hwloc15-dev
	Depends: hwloc15-shlibs (= %v-%r)
	BuildDependsOnly: true
	Conflicts: hwloc-dev, hwloc15-dev
	Replaces: hwloc-dev, hwloc15-dev
	DocFiles: AUTHORS COPYING NEWS README
	Files: <<
		include
		lib/libhwloc.{dylib,la}
		lib/pkgconfig
		share/man/man3
