	--disable-dbus \
	--disable-gtk \
	--with-system-libtiff \
	--without-tesseract \
	(%type_raw[-nox] = .) --x-includes=$X11_BASE_DIR/include \
	(%type_raw[-nox] = .) --x-libraries=$X11_BASE_DIR/lib \
	(%type_raw[-nox] = .) --with-x
	(%type_raw[-nox] = -nox) --without-x
