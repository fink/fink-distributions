    update-alternatives --install %p/bin/$i    $i    %p/bin/$i-py%type_pkg[python] %type_pkg[python] \
                        --slave   %p/bin/$i.py $i-py %p/bin/$i-py%type_pkg[python]
  done
<<

PreRmScript: <<
  if [ $1 != "upgrade" ]; then
    for i in docutils rst2html rst2latex rst2man rst2odt rst2odt_prepstyles rst2pseudoxml rst2s5 rst2xetex rst2xml rstpep2html; do
      update-alternatives --remove $i %p/bin/$i-py%type_pkg[python]
      update-alternatives --remove $i-py %p/bin/$i-py%type_pkg[python]
    done
  fi
<<

