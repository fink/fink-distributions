Depends: <<
	freetype219-shlibs (>= 2.10.2-1),
	fribidi-shlibs,
	libharfbuzz0-shlibs
<<
BuildDepends: <<
	autoconf2.6,
	automake1.15,
	fink (>= 0.32),
	freetype219 (>= 2.10.2-1),
	fribidi-dev,
	glib2-dev (>= 2.22.0-1),
	gtk-doc,
	libgraphite2-dev,
	libharfbuzz0-dev,
	pkgconfig
<<
