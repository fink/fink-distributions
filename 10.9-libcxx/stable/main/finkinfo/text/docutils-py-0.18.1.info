#!/bin/sh -ev
%p/bin/python%type_raw[python] setup.py install --root %d

for i in *.txt ; do
  htmldoc=${i%%txt}html
  echo "Making $htmldoc"
  PYTHONPATH=. %p/bin/python%type_raw[python] tools/rst2html.py $i $htmldoc
done

cd docs
for i in `find . -name '*.txt'` ; do
  destdir="%i/share/doc/%n/html/"${i%%/*}
  htmldoc=${i%%txt}html
  echo "Making $htmldoc"
  PYTHONPATH=.. %p/bin/python%type_raw[python] ../tools/rst2html.py $i $htmldoc
  mkdir -p "$destdir"
  cp $htmldoc $destdir
done

cd %i/bin
for i in rst2* rstpep2html.py; do
  mv $i ${i%%.py}-py%type_pkg[python]
done
<<

