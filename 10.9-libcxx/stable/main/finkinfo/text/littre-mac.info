	qt4-base-mac-qtcore-shlibs (>= 4.7.3-1),
	qt4-base-mac-qtgui-shlibs (>= 4.7.3-1),
	qt4-base-mac-qtxml-shlibs (>= 4.7.3-1),
	libiconv, 
	libpng16-shlibs
