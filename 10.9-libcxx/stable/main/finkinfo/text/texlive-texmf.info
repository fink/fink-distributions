#!/bin/bash -ev
 wget ftp://tug.org/texlive/historic/2023/texlive-20230313-texmf.tar.xz
 xz -dc texlive-20230313-texmf.tar.xz | tar xf -

 mkdir -p tmp/texlive-20230313-texmf/texmf-dist/doc
 mv texlive-20230313-texmf/texmf-dist/doc tmp/texlive-20230313-texmf/texmf-dist/doc

 mkdir                                           texlive-20230313-texmf-doc
 mv       tmp/texlive-20230313-texmf/texmf-dist  texlive-20230313-texmf-doc/
 gtar cfJ texlive-20230313-texmf-doc.tar.xz      texlive-20230313-texmf-doc

 mv       texlive-20230313-texmf                 texlive-20230313-texmf-delpdf
 gtar cfJ texlive-20230313-texmf-delpdf.tar.xz texlive-20230313-texmf-delpdf/texmf-dist/*
<<
