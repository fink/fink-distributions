PatchScript: <<
	%{default_script}
	mv configure.in configure.ac
	find . -name Makefile.am | xargs perl -pi -e 's/INCLUDES/AM_CPPFLAGS/'
	perl -pi -e 's/(AC_DEFUN\()([^[]+)(,)/\1\[\2]\3/' configure.ac
<<
ConfigureParams: <<
	--disable-static \
	--enable-silent-rules
<<	
