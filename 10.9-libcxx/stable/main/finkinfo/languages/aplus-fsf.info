CompileScript: <<
#!/bin/sh -ev
	darwinvers=`uname -r|cut -f1 -d.`
	if [ $darwinvers == 8 ]; then CPPFLAGS="-DNO_TIMEZONE ${CPPFLAGS}"; fi

	autoreconf -fi
	./configure %c
	make
	fink-package-precedence --prohibit-bdep=%n-dev .
<<
