Package: fpc-cross-mipsel-%type_pkg[platform]
Version: 3.2.0
Revision: 1
Type: platform (linux)
Depends: <<
  fpc-cross-common (>= 3.2.0-1),
  mipsel-%type_pkg[platform]-binutils
<<
