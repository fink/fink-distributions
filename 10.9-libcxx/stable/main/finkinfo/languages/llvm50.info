		install_name_tool -id "$iname" "$b"
		case $f in
		*.dylib) filt="sed 1,2d" ;;
		*.so) filt="sed 1d" ;;
		esac
		deplibs=`otool -L $b | $filt | awk '{print $1;}' | tr '\n' ' '`
		for d in $deplibs
		do
		  # prefix absolute paths to llvm/clang's lib installation
		  # caution: assumes dependent libraries are in same dir
		  db=`basename $d`
