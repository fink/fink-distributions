	test -d /usr/lib/c++/v1 ||
	test "$darwin_vers" -lt 11 ||
	{
	  sys_clang_path=`xcrun -find clang`
	  pushd `dirname $sys_clang_path`
	  if test -d ../lib/c++/v1
