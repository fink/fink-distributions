	  sed -i.orig3 -e 's|AddPath("/usr/include/c++/v1"|AddPath("'"$sys_cxx_incdir"'"|' \
		tools/clang/lib/Frontend/InitHeaderSearch.cpp
	}

	#pushd ../openmp-%v.src
