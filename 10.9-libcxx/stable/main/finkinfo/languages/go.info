InstallScript: <<
  #!/bin/sh -ev

  /bin/mkdir -p %i/lib/go
  # WARNING: go counts on the timestamps of the sources and symbolic links
  /bin/cp -Rp bin lib pkg src %i/lib/go

  # for godoc
  /bin/ln -s ../../share/doc/go/doc %i/lib/go/doc

  /bin/mkdir %i/bin
  pushd bin
  for i in *; do
    /bin/ln -s ../lib/go/bin/$i %i/bin/$i
  done
  popd
<<

