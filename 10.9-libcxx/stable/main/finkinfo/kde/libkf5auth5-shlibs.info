Source: mirror:kde:stable/frameworks/5.8/kauth-%v.tar.xz
Source-MD5: 743436e264547bd9223c21f4921b82ea
SetCXXFLAGS: -MD
GCC: 4.0
CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-kf5.sh

	mkdir build
	pushd build
		cmake \
			$FINK_CMAKE_ARGS \
			$KF5_CMAKE_ARGS \
		..
		make
	popd
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=libkf5auth5-dev .
<<
InstallScript: <<
	#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR=%d
	popd
<<
Shlibs: <<
	%p/lib/qt5-mac/lib/libKF5Auth.5.dylib 5.0.0 %n (>= 5.4.0-1)
<<
SplitOff: <<
	Package: libkf5auth5-dev
	Description: KF5 - Authentication library
	Depends: <<
		%N (= %v-%r),
		libkf5auth5-shlibs (= %v-%r),
		qt5-mac-qtcore-shlibs,
		qt5-mac-qtxml-shlibs
	<<
	BuildDependsOnly: true
	Files: <<
		lib/qt5-mac/include
		lib/qt5-mac/lib/cmake
		lib/qt5-mac/lib/libKF5Auth.dylib
		lib/qt5-mac/libexec/kauth
		lib/qt5-mac/share/qt5/mkspecs
	<<
	DocFiles: COPYING* README.md
<<
SplitOff2: <<
	Package: libkf5auth-data
	Description: KF5 - Authentication library
	Files: <<
		lib/qt5-mac/etc
		lib/qt5-mac/share/kf5/kauth
		lib/qt5-mac/share/locale
	<<
	DocFiles: COPYING* README.md
<<
