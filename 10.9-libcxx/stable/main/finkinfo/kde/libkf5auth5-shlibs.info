	cmake,
	extra-cmake-modules (>= 1.8.0),
	fink (>= 0.34),
	fink-buildenv-modules (>= 0.1.2),
	fink-package-precedence,
	libkf5coreaddons5-dev (>= %v-1),
	qt5-mac-linguist,
