	libkf5auth-data (>= %v-%r),
	libkf5coreaddons5-shlibs (>= %v-1),
	qt5-mac-qtcore-shlibs,
	qt5-mac-qtdbus-shlibs,
	qt5-mac-qtgui-shlibs,
	qt5-mac-qtwidgets-shlibs
<<
