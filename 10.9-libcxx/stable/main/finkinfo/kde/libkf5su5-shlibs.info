CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-kf5.44.sh

	mkdir build
	pushd build
		cmake \
			$FINK_CMAKE_ARGS \
			$KF5_CMAKE_ARGS \
			-DKDESU_USE_SUDO_DEFAULT=TRUE \
		..
		make
	popd
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=libkf5su5-dev .
<<
InstallScript: <<
	#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR=%d
	popd
<<
