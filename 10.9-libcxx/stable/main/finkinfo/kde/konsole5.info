PatchScript: <<
	%{default_script}
	# QStandardPaths::GenericDataLocation doesn't include "<APPDIR>/../Resources"
	perl -pi -e 's|GenericDataLocation|AppDataLocation|g' src/KeyboardTranslatorManager.cpp
<<
SetCPPFLAGS: -MD
SetCXXFLAGS: -MD
GCC: 4.0
CompileScript: <<
#!/bin/sh -ev
	. %p/sbin/fink-buildenv-kf5.44.sh
	#cp %p/share/cmake-3.20/Modules/MacOSXBundleInfo.plist.in %b/app
	mkdir -p build
	pushd build
	cmake \
		$FINK_CMAKE_ARGS \
		$KF5_CMAKE_ARGS \
	..
	make
	popd
	fink-package-precedence --depfile-ext='\.d' .
<<
InstallScript: <<
#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR="%d"
	popd
	# Copy some default features to where the .app can find it
	install -d -m 755 %i/Applications/KF5/konsole.app/Contents/Resources/konsole
	cp %i/lib/qt5-mac/share/konsole/default.keytab %i/Applications/KF5/konsole.app/Contents/Resources/konsole
	cp %i/lib/qt5-mac/share/konsole/*.colorscheme %i/Applications/KF5/konsole.app/Contents/Resources/konsole
	# Allow finding the icons for menus & buttons
	ln -s %p/lib/qt5-mac/share/icons/breeze/breeze-icons.rcc %i/Applications/KF5/konsole.app/Contents/Resources/icontheme.rcc
<<
