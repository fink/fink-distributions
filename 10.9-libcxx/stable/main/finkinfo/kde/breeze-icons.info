CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-kf5.44.sh
	
	mkdir -p build
	pushd build
	cmake \
		$FINK_CMAKE_ARGS \
		$KF5_CMAKE_ARGS \
	..
	make
	popd
<<

InstallScript: <<
#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR="%d"
	popd
<<

