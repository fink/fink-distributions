PatchScript: <<
	%{default_script}
	mv cmake/modules/FindOpenBabel2.cmake cmake/modules/FindOpenBabel3.cmake
	find . -type f | xargs perl -pi -e 's/OPENBABEL2/OPENBABEL3/g; s/OpenBabel2/OpenBabel3/g; s/openbabel-2.0/openbabel-3/g;'
