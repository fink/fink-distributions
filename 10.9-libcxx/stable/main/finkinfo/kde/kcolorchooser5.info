CompileScript: <<
#!/bin/sh -ev
	. %p/sbin/fink-buildenv-kf5.44.sh
	mkdir -p build
	pushd build
	cmake \
		$FINK_CMAKE_ARGS \
		$KF5_CMAKE_ARGS \
	..
	make
	popd
	fink-package-precedence --depfile-ext='\.d' .
<<
InstallScript: <<
#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR="%d"
	popd
	install -m 755 -d %i/Applications/KF5/kcolorchooser.app/Contents/Resources
	# Allow finding the icons for menus & buttons
	ln -s %p/lib/qt5-mac/share/icons/breeze/breeze-icons.rcc %i/Applications/KF5/kcolorchooser.app/Contents/Resources/icontheme.rcc
<<
