Package: libkf5dbusaddons5-shlibs
# Tier 1
Version: 5.44.0
Revision: 1
Description: KF5 - Class library for QtDBus
License: GPL
Maintainer: Hanspeter Niederstrasser <nieder@users.sourceforge.net>
Depends: <<
	libkf5dbusaddons-data (>= %v-%r),
	qt5-mac-qtcore-shlibs (>= 5.7.1),
	qt5-mac-qtdbus-shlibs
<<
BuildDepends: <<
	cmake,
	extra-cmake-modules (>= %v),
	fink (>= 0.34),
	fink-buildenv-modules (>= 0.1.9),
	fink-package-precedence,
	qt5-mac-linguist,
	qt5-mac-qtbase,
	qt5-mac-qtmacextras,
	qt5-mac-qttools,
	qt5-mac-qttools-dev-tools
<<
Source: https://download.kde.org/Attic/frameworks/5.44/kdbusaddons-%v.tar.xz
Source-Checksum: SHA256(6f7e8ccb12f243fadb881b7b958000081b89ee115b43d5a0d067e7b9a3b76795)
SetCXXFLAGS: -MD
GCC: 4.0
CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-kf5.44.sh

	mkdir build
	pushd build
		cmake \
			$FINK_CMAKE_ARGS \
			$KF5_CMAKE_ARGS \
		..
		make
	popd
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=libkf5dbusaddons5-dev .
<<
InstallScript: <<
	#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR=%d
	popd
<<
Shlibs: <<
	%p/lib/qt5-mac/lib/libKF5DBusAddons.5.dylib 5.0.0 %n (>= 5.3.0-1)
<<
SplitOff: <<
	Package: libkf5dbusaddons5-dev
	Description: KF5 - Addons to QtCore library
	Depends: <<
		%N (= %v-%r)
	<<
	BuildDependsOnly: true
	Files: <<
		lib/qt5-mac/include
		lib/qt5-mac/lib/cmake
		lib/qt5-mac/lib/libKF5DBusAddons.dylib
		lib/qt5-mac/share/qt5/mkspecs
	<<
	DocFiles: COPYING* README.md
<<
SplitOff2: <<
	Package: libkf5dbusaddons-data
	Description: KF5 - Data for libkf5dbusaddons5
	Files: <<
		lib/qt5-mac/etc/xdg
		lib/qt5-mac/share/locale
	<<
	DocFiles: COPYING* README.md
<<
SplitOff3: <<
	Package: libkf5dbusaddons-bin
	Description: KF5 - Configuration settings library
	Depends: <<
		libkf5dbusaddons5-shlibs (>= %v-%r),
		qt5-mac-qtcore-shlibs (>= 5.7.1),
		qt5-mac-qtdbus-shlibs
	<<
	Files: <<
		lib/qt5-mac/bin
	<<
	DocFiles: COPYING* README.md
<<
