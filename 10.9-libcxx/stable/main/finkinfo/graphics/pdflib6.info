Package: pdflib6
Version: 7.0.5p3
Revision: 1
GCC: 4.0
BuildDependsOnly: True
Source: https://fossies.org/linux/misc/old/PDFlib-Lite-%v.tar.gz
Source-Checksum: SHA256(e5fb30678165d28b2bf066f78d5f5787e73a2a28d4902b63e3e07ce1678616c9)
Depends: %N-shlibs (= %v-%r)
NoSetCPPFLAGS: true
NoSetLDFLAGS: true
Conflicts: pdflib
Replaces: pdflib
# Includes MacPorts patches for ARM and modern compilers:
# * arm64.patch
# * patch-pngconf.h.diff
PatchFile: %n.patch
