SetCFLAGS: -Os -MD
PatchScript: <<
 perl -pi -e "s|\/usr\/bin\/env python3|%p/bin/python3.7|g" GUI/xasy.py
 # Don't blank out our PERL5LIB
 perl -pi -e 's|^PERL5LIB \=|PERL5LIB \+\=|g' doc/Makefile.in
 # Don't even look here for gc
 perl -pi -e 's|-I/usr/include/gc||g' configure
<<
ConfigureParams: <<
	--mandir=%p/share/man \
	--enable-gc=system \
	--with-latex=%p/etc/texmf.local/tex/latex \
	--with-context=%p/etc/texmf.local/tex/context
<<
CompileScript: <<
#!/bin/sh -ev
 ./configure %c
 make all
 fink-package-precedence --depfile-ext='\.d' .
<<
InfoTest: <<
    TestScript: make check || exit 2
<<
InstallScript: <<
#!/bin/sh -ev
 make install DESTDIR=%d
 # rescue the info file from subdirectory
 mv %i/share/info/asymptote/asymptote.info %i/share/info/
 rmdir %i/share/info/asymptote
 perl -pi -e 's|asymptote/asymptote|asymptote|' %i/share/info/asymptote.info
<<
