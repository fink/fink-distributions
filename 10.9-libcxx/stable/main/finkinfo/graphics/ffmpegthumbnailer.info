	cmake (>= 3.12),
	fink-buildenv-modules,
	fink-package-precedence,
	libavcodec58-4.0-dev,
	libavfilter7-4.0-dev,
	libavformat58-4.0-dev,
	libavutil56-4.0-dev,
	libjpeg9,
	libpng16,
	libpostproc55-4.0-dev,
