CompileScript: <<
	#!/bin/sh -ev
	. %p/sbin/fink-buildenv-cmake.sh
	export PKG_CONFIG_PATH=%p/lib/ffmpeg-4.0/lib/pkgconfig:$PKG_CONFIG_PATH
	mkdir finkbuild
	pushd finkbuild
		cmake $FINK_CMAKE_ARGS \
			-DENABLE_SHARED=OFF \
			-DENABLE_STATIC=ON \
			-DCMAKE_CXX_FLAGS=-MD \
		..
		make -w
	popd
	fink-package-precedence --depfile-ext='\.d' .
<<
InfoTest: <<
	TestScript: <<
		#!/bin/sh -ev
		pushd finkbuild
			make test || exit 2
		popd
	<<
<<
InstallScript: <<
	#!/bin/sh -ev
	pushd finkbuild
		make install DESTDIR=%d
	popd
	rm -r %i/lib
<<
