#!/bin/sh -ev
	mkdir m4
	%{default_script}
	for f in \
		01-disable-gpc.patch \
		04-no-rpath.patch \
		05-no-agg_conv_gpc.h.patch \
		10-change-ABI-to-linux.patch \
	; do \
		patch -p1 < ../debian/patches/$f
	done
	perl -pi -e 's/SUBDIRS = gpc.*/SUBDIRS += gpc/' Makefile.am
<<
