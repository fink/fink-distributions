	TestScript: <<
		#!/bin/sh -ev
		# https://github.com/libgd/libgd/issues/763
		mkdir %b/_tmp
		export TMPDIR=%b/_tmp
		make -j1 check || exit 2
		fink-package-precedence --prohibit-bdep=gd2,gd2-nox,gd3 .
	<<
<<
