  #!/bin/sh -ev
  %{default_script}
  ### Give dylibs a versioned install_name
  perl -pi -e 's;-install_name,\$\(SHLIBDIR\)/\$\(SLIBNAME\);-install_name,\$\(SHLIBDIR\)/\$\(SLIBNAME_WITH_MAJOR\);g' configure
