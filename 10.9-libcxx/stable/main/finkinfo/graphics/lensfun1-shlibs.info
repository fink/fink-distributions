CompileScript: <<
#!/bin/sh -ev
	export PKG_CONFIG_PATH="%p/lib/glib-2.0/pkgconfig-strict:$PKG_CONFIG_PATH"
	. %p/sbin/fink-buildenv-cmake.sh
	cmake \
		$FINK_CMAKE_ARGS \
		-DBUILD_STATIC=OFF \
		-DBUILD_DOC=ON \
		-DCMAKE_CXX_FLAGS=-MD \
		-DBUILD_TESTS=OFF \
		-DBUILD_LENSTOOL=OFF \
		-DPYTHON=OFF \
	.
	make
	fink-package-precedence --depfile-ext='\.d' .
<<
