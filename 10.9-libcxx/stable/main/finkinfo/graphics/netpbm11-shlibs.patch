+JPEGHDR_DIR	= @PREFIX@/lib/libjpeg8-turbo/include
+PNGHDR_DIR	= @PREFIX@/include
+ZHDR_DIR	= @PREFIX@/include
+JBIGHDR_DIR	= @PREFIX@/include
+JASPERHDR_DIR	= @PREFIX@/include
