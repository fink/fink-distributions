	--libexecdir=%p/lib/%n \
	--enable-gtk-doc \
	--enable-dependency-tracking \
	--disable-static \
	--enable-dvdread \
	--disable-orc \
	--with-package-name="GStreamer Ugly Plugins %v Fink" \
	--with-package-origin="http://www.finkproject.org/"
