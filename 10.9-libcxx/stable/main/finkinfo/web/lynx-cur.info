	--enable-externs \
	--enable-forms-options \
	--enable-gzip-help \
	--enable-japanese-utf8 \
	--enable-justify-elts \
	--enable-locale-charset \
	--enable-nested-tables \
	--with-screen=ncursesw \
	--enable-nls \
	--enable-nsl-fork \
	--enable-partial \
	--without-included-gettext \
	--with-ssl \
	--enable-ipv6 \
	--enable-persistent-cookies \
	--enable-prettysrc \
	--enable-read-eta \
	--enable-scrollbar \
