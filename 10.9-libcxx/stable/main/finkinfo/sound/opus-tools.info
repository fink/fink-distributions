	fink-package-precedence,
	libflac12-dev,
	libogg (>= 1.3.4-2),
	libopus0-dev (>= 1.2.1),
	libopusenc0-dev (>= 0.2.1),
	libopusfile0-dev (>= 0.11),
	libpcap1,
	pkgconfig
<<
