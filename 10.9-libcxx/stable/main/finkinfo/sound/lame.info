PatchScript: <<
	patch -p1 < ../debian/patches/msse.patch
	patch -p1 < ../debian/patches/spelling-error-in-binary.patch
	patch -p1 < ../debian/patches/07-field-width-fix.patch
	patch -p1 < ../debian/patches/spelling-error-in-manpage.patch
