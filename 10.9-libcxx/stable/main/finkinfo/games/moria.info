PatchScript: <<
  sed 's|@PREFIX@|%p|g' < %{PatchFile} | patch -p1
  cp -Rp unix/* source/
  perl -ni -e 'print unless / (get[ug]id|lseek)\(\);/' source/main.c source/unix.c source/death.c
