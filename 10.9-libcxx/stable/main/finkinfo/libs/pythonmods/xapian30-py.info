  libxapian30-shlibs (>= %v),
  cryptography-py%type_pkg[python],
  sphinx-py%type_pkg[python],
  tornado-py%type_pkg[python],
  (%type_pkg[python] = 34) typing-py%type_pkg[python],
  python%type_pkg[python]
