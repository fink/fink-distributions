InstallScript: <<
  #!/bin/bash -ev
  python%type_raw[python] setup.py install --root=%d
  mkdir %i/share
  mv %i/man %i/share/man
  mv %i/share/man/man1/nosetests{,-py%type_pkg[python]}.1
  mv %i/bin/nosetests %i/bin/nosetests%type_raw[python]
