PatchScript: <<
	%{default_script}
<<
NoSetLDFLAGS: True
SetLDFLAGS: -Wl,-dead_strip_dylibs
SetLibs: -lkrb5 -L%p/%lib -ldb-5.3
SetCPPFLAGS: -I%p/include/db5 -DBIND_8_COMPAT
ConfigureParams: <<
	--libexecdir=%p/sbin \
	--mandir=%p/share/man \
	--with-cyrus-sasl \
	--enable-ldap \
	--disable-dependency-tracking \
	--enable-dynamic \
	--enable-shared \
	--disable-static
<<
