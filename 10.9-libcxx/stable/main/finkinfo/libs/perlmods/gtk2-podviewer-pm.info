PatchScript: <<
#!/bin/sh -ev
	export FULLPERL=`perl -e 'print $ARGV[0]=~/PERL="(.*?)"/' '%c'`
	perl -pi.bak -e 's,^#!/usr/bin/perl,#!'"$FULLPERL," src/podviewer
<<

