#!/bin/sh -ev
	sed 's,@PREFIX@,%p,g' < %{PatchFile} | patch -p1

	export FULLPERL=`perl -e 'print $ARGV[0]=~/PERL="(.*?)"/' '%c'`
	perl -pi -e "s,\\$\\^X,'$FULLPERL'," t/200-file/100-files.t
<<
