InstallScript: <<
#!/bin/sh -ev

	%{default_script}
	mv %i/share/man %i/lib/perl5/%type_raw[perl]

	for bin in dbilogstrip dbiprof dbiproxy; do
		perl -pi -e 's,\#\!/usr/bin/perl.*,\#\!/usr/bin/env perl%type_raw[perl],' %i/bin/$bin
		mv %i/bin/$bin %i/bin/$bin-%type_raw[perl]
	done
<<
