	Depends: libx265.79-shlibs (= %v-%r)
	BuildDependsOnly: true
	Conflicts: libx265.31-dev, libx265.59-dev, libx265.79-dev, libx265-devel-dev
	Replaces: libx265.31-dev, libx265.59-dev, libx265.79-dev, libx265-devel-dev
	Files: <<
		include
		lib/libx265.dylib
		lib/pkgconfig
	<<
	DocFiles: COPYING
<<
