PatchScript: <<
	#!/bin/sh -ev
	patch -p1 < %{PatchFile}
	if [ "%m" = "x86_64" ]
		then perl -pi.bak -e 's/-framework QuickTime//' configure*
	fi
	perl -pi.bak -e 's/-no-cpp-precomp//' configure*
	cp -r ../wxWidgets/trunk/* .
<<
