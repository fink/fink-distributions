PatchScript: <<
	%{default_script}
	# Apple does not have a stable path on all fink platforms.
	# NB: this script is not run because we killed the BDO pkg.
	# Retaining this patch for consistency with other libversions.
	perl -pi -e 's,^#!.*python*,#!%p/bin/python2.7,' event_rpcgen.py
	./autogen.sh
<<

