PatchScript: <<
  #!/bin/sh -ev
  if [ "%type_num[rversion]" -lt "34" ]; then
    perl -pi -e 's|AnalyzeFMRI.so|AnalyzeFMRI.dylib|g' src/Makevars.in
  fi
