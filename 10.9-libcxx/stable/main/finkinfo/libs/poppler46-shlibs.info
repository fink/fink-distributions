PatchScript: <<
	%{default_script}
	# fix Puma linking in configure on Yosemite
	perl -pi -e 's|10\.\[012\]\*|10.[012][,.]*|g' configure
	# autoconf2.6ish patch for modern XQuartz paths
	perl -pi -e "s|/usr/lpp/Xamples|/opt/X11|" configure
<<

