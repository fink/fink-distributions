Package: libmpfr6-shlibs
Version: 4.1.1
Revision: 1
Depends: <<
	gmp5-shlibs (>= 6.1.2-1)
<<
BuildDepends: <<
	fink-package-precedence,
	fink (>= 0.32.0),
	gmp5 (>= 6.1.2-1)
<<
Source: http://www.mpfr.org/mpfr-%v/mpfr-%v.tar.xz
Source-Checksum: SHA256(ffd195bd567dbaffc3b98b23fd00aad0537680c9896171e44fe3ff79e28ac33d)
ConfigureParams: <<
	--enable-shared \
	--disable-static
<<
DocFiles: AUTHORS COPYING BUGS COPYING.LESSER ChangeLog doc/FAQ.html NEWS README TODO VERSION PATCHES
PatchScript: <<
# Patch configure to not link like Puma on Yosemite
perl -pi.bak -e 's|10\.\[012\]\*|10.[012][,.]*|g' configure
<<
CompileScript: <<
	#!/bin/sh -ev
	%{default_script}
	# check here instead of InfoTest:TestScript b/c this is deemed important
	make check || exit 2
	fink-package-precedence --prohibit-bdep=libmpfr4,libmpfr4-64bit,libmpfr6,libmpfr7 .
<<
InstallScript: <<
	make install DESTDIR=%d
<<
Shlibs: <<
	%p/%lib/libmpfr.6.dylib 8.0.0 %n (>= 4.1.0-1)
<<
SplitOff: <<
	Package: libmpfr6
	Depends: <<
		libmpfr6-shlibs (= %v-%r)
	<<
	Conflicts: <<
		libmpfr4,
		libmpfr4-64bit,
		libmpfr6,
		libmpfr7
	<<
	Replaces: <<
		gmp (<< 4.1.4-1),
		libmpfr4,
		libmpfr4-64bit,
		libmpfr6,
		libmpfr6-shlibs (<< 4.1.0-2),
		libmpfr7
	<<
	BuildDependsOnly: True
	Files: <<
		include
		lib/libmpfr.dylib
		lib/libmpfr.la
		lib/pkgconfig
		share/doc/mpfr
		share/info
	<<
	InfoDocs: mpfr.info
	Description: C floating-point math lib
	DocFiles: AUTHORS COPYING BUGS COPYING.LESSER ChangeLog doc/FAQ.html NEWS README TODO VERSION PATCHES
<<
