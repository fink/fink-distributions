	cd ../lib
	### wx-config stores build directory
	perl -pi -e 's|-I%b/lib||g' wx/config/osx_cocoa-unicode-2.9
	### fix install_names
	for lib in baseu baseu_net baseu_xml
	do
		install_name_tool -id %p/lib/libwx_$lib-%v.dylib libwx_$lib-%v.0.0.dylib
