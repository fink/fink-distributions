	--enable-shared \
	--disable-static \
	--enable-threads \
	--with-pic \
	--includedir=%p/include/apr \
	--with-installbuilddir=%p/share/apr/build \
	SED=/usr/bin/sed \
	lt_cv_path_SED=/usr/bin/sed \
	AWK=/usr/bin/awk
<<

