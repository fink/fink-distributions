Package: gdbmexport
Version: 1.14
Revision: 2
Source: mirror:gnu:gdbm/gdbm-%v.tar.gz
Source-Checksum: SHA256(ada1437a4165a707b3e9f37b5b74dbbe7c2f8bde633b8c2c7dbc8f84f39baa09)
# use external gdbm
PatchFile: %n.patch
PatchFile-MD5: e7e8d0bc2251ed258b729947e69b8e46
Depends: gdbm6-shlibs
BuildDepends: <<
	fink-package-precedence,
	gdbm6
<<
SetCPPFLAGS: -Wall -Wextra -pedantic
ConfigureParams: <<
	--disable-static \
	--disable-silent-rules \
	--enable-gdbm-export \
	--with-gdbm183-libdir=%p/lib \
	--with-gdbm183-includedir=%p/include
<<
CompileScript: <<
	./configure %c
	make SUBDIRS=export
	fink-package-precedence .
<<
DocFiles: COPYING README NEWS NOTE-WARNING
InstallScript: <<
	make install DESTDIR=%d SUBDIRS=
<<
