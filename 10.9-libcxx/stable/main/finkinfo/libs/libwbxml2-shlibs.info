Package: libwbxml2-shlibs
Version: 0.10.9
Revision: 4
Description: Library to parse, encode and handle WBXML
License: LGPL
Maintainer: None <fink-devel@lists.sourceforge.net>
Depends: <<
	expat1-shlibs,
	libiconv
<<
BuildDepends: <<
	cmake (>= 2.6.0-1),
	expat1,
	fink-package-precedence,
	libiconv-dev
<<
# doesn't run libxml2 detection, so doesn't build libxml support, so
# don't need deps for it.
Source: mirror:sourceforge:libwbxml/libwbxml-%v.tar.bz2
Source-Checksum: SHA256(8ca60c9360536680d538cafbb5947ae2bae6fea5ff704f1bbdf166183b698d59)
PatchFile: %n.patch
PatchFile-MD5: e2bc52f05fe5932ccb52024249272fc1
PatchScript: <<
	%{default_script}
	# don't publish non-public-API details
	perl -ni -e 'print unless /Requires:/' libwbxml2.pc.cmake
<<
CompileScript: <<
#!/bin/sh -ev
	mkdir build
	pushd build
		cmake -DCMAKE_INSTALL_PREFIX=%p \
			-DCMAKE_VERBOSE_MAKEFILE=ON \
			-DEXPAT_INCLUDE_DIRS:PATH=%p/include \
			-DEXPAT_LIBRARIES:FILEPATH=%p/lib/libexpat.dylib \
			-DICONV_INCLUDE_DIR:PATH=%p/include \
			-DICONV_LIBRARIES:FILEPATH=%p/lib/libiconv.dylib \
			-DCMAKE_C_FLAGS:STRING=-MD \
		..
		make
	popd
	fink-package-precedence --prohibit-bdep=libwbxml2-dev --depfile-ext='\.d' .
<<
InfoTest: <<
	TestScript: <<
		#!/bin/sh -ev
		pushd build
			make test || exit 2
		popd
	<<
<<
InstallScript: <<
#!/bin/sh -ev
	pushd build
		make -j1 install/fast DESTDIR="%d"
	popd
	mv %i/share/doc/libwbxml %i/share/doc/%N
<<

