Description: Double-array trie
License: LGPL
Maintainer: Benjamin Reed <libdatrie@fink.raccoonfink.com>

Depends: <<
	%N-shlibs (= %v-%r),
	trietool (>= %v-%r),
	libiconv
<<
BuildDepends: <<
	fink (>= 0.32),
	fink-package-precedence,
	libiconv-dev
<<
Conflicts: libdatrie
Replaces: libdatrie
BuildDependsOnly: true

#Source: mirror:debian:pool/main/libd/libdatrie/libdatrie_%v.orig.tar.xz
