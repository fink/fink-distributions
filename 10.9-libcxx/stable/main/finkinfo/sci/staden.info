	--with-tcl=%p/lib \
	--with-tk=%p/lib \
	--with-io_lib=%p \
	--with-tklib=%p/lib \
	--with-iwidgets=%p/lib \
	--with-itcl=%p/lib \
	--with-itk=%p/lib
