diff -ruN grads-2.2.1-orig/m4/cairo.m4 grads-2.2.1/m4/cairo.m4
--- grads-2.2.1-orig/m4/cairo.m4	1969-12-31 18:00:00.000000000 -0600
+++ grads-2.2.1/m4/cairo.m4	2019-04-27 05:58:50.000000000 -0500
@@ -0,0 +1,18 @@
+# Autoconf check that uses pkg-config to look for Cairo Graphics Library.
+# Usage:
+#   GA_CHECK_LIB_CAIRO(action-if-found, action-if-not-found)
+
+AC_DEFUN([GA_CHECK_LIB_CAIRO],
+[
+
+  cairo_pkgconfig=no
+  PKG_CHECK_MODULES([CAIRO],[cairo],[cairo_pkgconfig=yes])
+
+  if test $cairo_pkgconfig = 'yes'; then
+     m4_if([$1], [], [:], [$1])
+  else
+     m4_if([$2], [], [:], [$2])
+  fi
+
+])
+
