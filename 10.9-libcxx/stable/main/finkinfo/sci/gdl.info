CompileScript: <<
#!/bin/bash -efv
	. %p/sbin/fink-buildenv-cmake.sh
	if [ $DARWIN_MAJOR_VERSION -ge 18 ]; then
	  sdk_path=`xcrun --sdk macosx --show-sdk-path`
	else
	  sdk_path=
	fi
	mkdir build
	pushd build
	%p/bin/cmake \
		$FINK_CMAKE_ARGS \
		-DCMAKE_CXX_FLAGS:STRING="-MD -isysroot ${sdk_path}" \
		-DRPCDIR=${sdk_path}/usr \
		-DEIGEN3=ON \
		-DFFTW=ON \
		-DFFTWDIR=%p \
		-DHDF5=ON \
		-DHDF5DIR=%p/opt/hdf5.v1.10 \
		-DHDF5_INCLUDE_DIRS=%p/opt/hdf5.v1.10/include \
		-DHDF=OFF \
		-DGRIB=ON \
		-DGRIBDIR=%p \
		-DGSHHS=OFF \
		-DGSLDIR=%p \
		-DQHULL=OFF \
		-DGRAPHICSMAGICK=OFF \
		-DJPEGDIR=%p \
		-DLIBPROJ4=ON \
		-DLIBPROJ4DIR=%p \
		-DMAGICK=OFF \
		-DMPICH=OFF \
		-DNCURSESDIR=%p \
		-DNETCDF=ON \
		-DOPENMP=OFF \
		-DMPI_mpi_LIBRARY=NOT_FOUND \
		-DMPI_mpi_cxx_LIBRARY=NOT_FOUND \
		-DZLIBDIR=${sdk_path}/usr/include \
		-DPLPLOTDIR=%p/lib/plplot18-5.15.0 \
		-DPLPLOT_INCLUDE_DIR=%p/include \
		-DPLPLOT_LIBRARIES=%p/lib/plplot18-5.15.0 \
		-DPNGLIB:BOOL=ON \
		-DPSLIB=OFF \
		-DPYTHON=OFF \
		-DREADLINE=ON \
		-DREADLINEDIR=%p \
		-DSHAPELIB=OFF \
		-DUDUNITS=ON \
		-DUDUNITSDIR=%p \
		-DWXWIDGETS=OFF \
		-DINTERACTIVE_GRAPHICS=OFF \
		-DX11DIR=$X11_BASE_DIR \
		-DCMAKE_OSX_DEPLOYMENT_TARGET:STRING="" \
		-DCMAKE_OSX_SYSROOT:STRING=/ \
		-LAH \
	..
	make
	popd
	fink-package-precedence --depfile-ext='\.d' .
<<
