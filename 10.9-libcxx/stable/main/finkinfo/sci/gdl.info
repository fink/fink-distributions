CompileScript: <<
#!/bin/bash -efv
. %p/sbin/fink-buildenv-helper.sh
mkdir build
pushd build
%p/bin/cmake \
	-DCMAKE_CXX_FLAGS:STRING=-MD \
	-DCMAKE_PREFIX_PATH=%p \
	-DCMAKE_INSTALL_PREFIX=%p \
	-DEIGEN3=ON \
	-DFFTW=ON \
	-DFFTWDIR=%p \
	-DHDF5=ON \
	-DHDF5DIR=%p/opt/hdf5.v1.10 \
	-DHDF=OFF \
	-DGRIB=ON \
	-DGRIBDIR=%p \
	-DGSHHS=OFF \
	-DGSLDIR=%p \
	-DQHULL=OFF \
	-DGRAPHICSMAGICK=OFF \
	-DJPEGDIR=%p \
	-DLIBPROJ4=ON \
	-DLIBPROJ4DIR=%p \
	-DMAGICK=OFF \
	-DMPICH=OFF \
	-DNCURSESDIR=%p \
	-DNETCDF=ON \
	-DOPENMP=OFF \
	-DZLIBDIR=`xcrun --sdk macosx --show-sdk-path`/usr/include \
	-DPLPLOTDIR=%p/lib/plplot \
	-DPLPLOT_INCLUDE_DIR=%p/include \
	-DPLPLOT_LIBRARIES=%p/lib/plplot \
	-DPNGLIB:BOOL=ON \
	-DPSLIB=OFF \
	-DPYTHON=OFF \
	-DREADLINE=ON \
	-DREADLINEDIR=%p \
	-DUDUNITS=ON \
	-DUDUNITSDIR=%p \
	-DWXWIDGETS=OFF \
	-DX11DIR=$X11_BASE_DIR \
	-DCMAKE_OSX_DEPLOYMENT_TARGET:STRING="" \
	-DCMAKE_OSX_SYSROOT:STRING=/ \
..
make
popd
fink-package-precedence --depfile-ext='\.d' .
<<
InstallScript: <<
#!/bin/bash -efv
	cd build
	/usr/bin/install -d %i/bin
	/usr/bin/install -m 0755 %b/build/src/gdl %i/bin
	/usr/bin/install -d %i/share/man/man1
	/usr/bin/install -m 0644 %b/doc/gdl.1 %i/share/man/man1
	make install DESTDIR=%d VERBOSE=1 
<<
InfoTest: TestScript: cd build; make check || exit 0
