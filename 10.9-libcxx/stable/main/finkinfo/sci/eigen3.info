	. %p/sbin/fink-buildenv-cmake.sh
	mkdir finkbuild
	pushd finkbuild
	%p/bin/cmake \
		$FINK_CMAKE_ARGS \
		-DQT_QMAKE_EXECUTABLE:FILEPATH=NOTFOUND \
		-DEIGEN_BUILD_BLAS=OFF \
		-DEIGEN_BUILD_LAPACK=OFF \
		-DEIGEN_BUILD_TESTING=OFF \
		..
	popd
