CompileScript: <<
#!/bin/sh -ev
	. %p/sbin/fink-buildenv-cmake.sh
	mkdir finkbuild
	pushd finkbuild
	cmake \
		$FINK_CMAKE_ARGS \
		-DCMAKE_CXX_FLAGS:STRING=-MD \
		-DBoost_INCLUDE_DIR=%p/opt/boost-1_68/include \
		..
	make
	popd
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=libcoordgen1-dev .
<<
InstallScript: <<
#!/bin/sh -ev
	pushd finkbuild
	make install DESTDIR=%d
	popd
<<
