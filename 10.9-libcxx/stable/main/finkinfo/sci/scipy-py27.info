#!/bin/bash -ev
  cat <<EOF > site.cfg
[amd]
library_dirs = %p/lib
include_dirs = %p/include/suitesparse
amd_libs = amd

[umfpack]
library_dirs = %p/lib
include_dirs = %p/include/suitesparse
