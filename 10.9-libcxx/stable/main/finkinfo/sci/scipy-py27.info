[openblas]
libraries = openblas
library_dirs = %p/lib
include_dirs = %p/include
runtime_library_dirs = %p/lib
EOF
  # fix str+bytes error https://github.com/scipy/scipy/issues/10179
  perl -pi -e 's/(p.stdout.read..)(\))/${1}.decode()${2}/;' scipy/linalg/tests/test_lapack.py
