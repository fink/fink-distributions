#! /bin/bash -ex
. %p/sbin/fink-buildenv-helper.sh
sed 's|@FINKPREFIX@|%p|g' < %{PatchFile} | sed "s|@X11DIR@|$X11_BASE_DIR|g" | sed 's|python2.X|python%type_raw[python]|g' | patch -p1
