PatchScript: <<
 #!/bin/sh -ev
 perl -pi -e 's/hardcode_direct=yes/hardcode_direct=no/g' configure
 # obsolete use of sort
 perl -pi -e 's,sort \+2,sort -k 2,' bin/ltmain.sh
 cp config/apple config/powerpc-apple
 cp config/apple config/i386-apple
