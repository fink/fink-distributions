 #!/bin/sh -ev
 if [ %type_pkg[python] -ge 30 ]; then
   egrep -v '^gtk|^wxagg|^cairo' setup.cfg.template > setup.cfg
 else
   cp -a setup.cfg{.template,}
 fi
