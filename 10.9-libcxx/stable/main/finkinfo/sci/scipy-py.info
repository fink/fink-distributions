PatchScript: <<
#!/bin/bash -ev
  cat <<EOF > site.cfg
[amd]
library_dirs = %p/lib
include_dirs = %p/include/suitesparse
amd_libs = amd

[umfpack]
library_dirs = %p/lib
include_dirs = %p/include/suitesparse
umfpack_libs = umfpack

[openblas]
libraries = openblas
library_dirs = %p/lib
include_dirs = %p/include
runtime_library_dirs = %p/lib
EOF
  # fix str+bytes error https://github.com/scipy/scipy/issues/10179
  perl -pi -e 's/(p.stdout.read..)(\))/${1}.decode()${2}/;' scipy/linalg/tests/test_lapack.py
  # disable pytest 6.1 warning on 'Unknown config option: env'
  perl -pi -e 's/(env =)//;s/(PYTHONHASHSEED=0)/ignore:assertions not in test modules or plugins:pytest.PytestConfigWarning/;' pytest.ini
  # Additional Deprecations in numpy, setuptools-tng; numerics
  cat <<EOF >> pytest.ini
    ignore:distutils Version classes are deprecated.*:DeprecationWarning
    ignore:the \`interpolation=\` argument to .*percentile was renamed to \`method=\`.*:DeprecationWarning
    ignore:.* encountered in _beta_ppf:RuntimeWarning
    ignore:The occurrence of roundoff error is detected.*:scipy.integrate._quadpack_py.IntegrationWarning
EOF
