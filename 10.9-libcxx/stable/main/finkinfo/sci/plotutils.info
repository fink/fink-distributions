PatchFile: %n.patch
PatchFile-MD5: 465fd947f7ca6ae9a447dd521c1216e0
PatchScript: <<
#!/bin/sh -ev
	for file in \
		01_configure_ac \
		10_repair_postscript \
		11_manpages_sb_macro \
		14_manpage_spline \
		20_svg_attribute_syntax \
		25_libpng15 \
		30_hershey_glyphs \
	; do
		echo "applying $file"
		patch -p1 < ../debian/patches/$file
	done
	%{default_script}
<<

