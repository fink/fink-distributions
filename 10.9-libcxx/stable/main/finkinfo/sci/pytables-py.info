 #!/bin/sh -ev
 %p/bin/python%type_raw[python] setup.py build_ext --cflags='-I%p/include' --lflags='-L%p/lib' --hdf5=%p/ --lzo=%p/ --bzip2=%p/ 
 %p/bin/python%type_raw[python] setup.py build --hdf5=%p/ --lzo=%p/ --bzip2=%p/ 
 cd doc
