CompileScript: <<
#!/bin/bash -ev
	. %p/sbin/fink-buildenv-cmake.sh
	mkdir finkbuild
	pushd finkbuild
		cmake $FINK_CMAKE_ARGS \
			-DENABLE_OPENMP=OFF \
			..
	make
<<
InstallScript: <<
#!/bin/sh -ev
	pushd finkbuild
	make install DESTDIR=%d
<<
