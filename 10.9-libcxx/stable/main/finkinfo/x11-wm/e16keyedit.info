	atk1,
	cairo,
	fontconfig2-dev,
	freetype219,
	glib2-dev,
	gtk+2-dev,
	libgettext8-dev,
	pango1-xft2-ft219-dev,
        pkgconfig, 
        x11-dev,
	fink-package-precedence
<<
