PatchScript: <<
  sed 's|@PREFIX@|%p|g' < %{PatchFile} | patch -p1
  patch -p1 < %{PatchFile2}
  perl -pi -e 's,hardcode_direct=yes,hardcode_direct=no,g' configure
  perl -pi -e 's|/usr/local/Acrobat3/bin/acroread|open -b com.adobe.Reader|g' WindowMaker/plmenu*
