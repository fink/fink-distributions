Package: libunbound8-shlibs
Version: 1.12.0
Revision: 1
Source: https://www.unbound.net/downloads/unbound-%v.tar.gz
Source-MD5: eb03869cea5dd2b65e21ca068e78d6b0
BuildDepends: <<
	expat1,
	fink-package-precedence,
	libevent2.1,
	libsodium23,
	pkgconfig,
	openssl110-dev
<<
Depends: <<
	libevent2.1-shlibs,
	libsodium23-shlibs,
	openssl110-shlibs
<<
PatchScript: <<
	perl -pi -e 's/(-version-info)/-no-undefined \1/' Makefile.in
	# use direct path to builddir library
	perl -pi -e 's/-L\. -L\.libs -lunbound/libunbound.la/' Makefile.in
	# scrap nonpublic-API/internal-implementation-details
	perl -ni -e 'print unless /\.private:/' contrib/libunbound.pc.in
<<
SetCPPFLAGS: -MD
ConfigureParams: <<
	--disable-static \
	--with-libevent=%p \
	--with-libexpat=%p \
	--with-ssl=%p \
	--enable-dnscrypt \
	--enable-ipsecmod \
	--disable-ipset
<<
CompileScript: <<
	%{default_script}
	fink-package-precedence -depfile-ext='\.d' --prohibit-bdep=libunbound8 .
<<
InstallScript: <<
	make install DESTDIR=%d
<<
DocFiles: doc/CREDITS doc/ChangeLog doc/FEATURES doc/LICENSE doc/README doc/README.DNS64 doc/TODO
Shlibs: %p/lib/libunbound.8.dylib 10.0.0 %n (>= 1.12.0-1)
SplitOff: <<
	Package: libunbound8
	Depends: %N (= %v-%r)
	Conflicts: <<
		libunbound2,
		libunbound8
	<<
	Replaces: <<
		libunbound2,
		libunbound8
	<<
	BuildDependsOnly: true
	Files: <<
		include
		lib/libunbound.{dylib,la}
		lib/pkgconfig
		share/man/man3
	<<
	DocFiles: doc/CREDITS doc/ChangeLog doc/FEATURES doc/LICENSE doc/README doc/README.DNS64 doc/TODO
<<
SplitOff2: <<
	Package: unbound
	Depends: <<
		%N (>= %v-%r),
		expat1-shlibs,
		libevent2.1-shlibs,
		libsodium23-shlibs,
		openssl110-shlibs
	<<
	Files: <<
		etc
		sbin
		share/man/man1
		share/man/man5
		share/man/man8
	<<
	DocFiles: doc/CREDITS doc/ChangeLog doc/FEATURES doc/LICENSE doc/README doc/README.DNS64 doc/TODO
<<
