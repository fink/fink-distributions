PatchScript: <<
	sed 's|@FINK_PREFIX@|%p|g' < %{PatchFile} | patch -p1
	perl -pi -e 's|^MARKDOWN|#MARKDOWN|g' Makefile
	perl -pi -e 's|\tpandoc|\t#pandoc|g' Makefile
<<
CompileScript: <<
  # force the script to be regenerated by make
  rm %b/bin/%n
<<
InstallScript: <<
  make \
      PYTHON=/usr/bin/python2.7 \
      DESTDIR=%d \
      PREFIX=%p \
      MANDIR=%p/share/man \
      SYSCONFDIR=%p/etc \
      install
<<
