Info2: <<
Package: irssi
# 1.x.x requires glib2.28+ NEWGLIB28
Version: 0.8.21
Revision: 1
Maintainer: Daniel Macks <dmacks@netspace.org>
BuildDepends: <<
	fink (>= 0.32),
	fink-package-precedence,
	glib2-dev (>= 2.22.0-1),
	libncurses5,
	openssl110-dev,
	pkgconfig (>= 0.23)
<<
Depends: <<
	glib2-shlibs (>= 2.22.0-1),
	libncurses5-shlibs,
	openssl110-shlibs,
	perl%type_pkg[perl]-core
<<
Replaces: irssi-ssl
#Source: http://www.irssi.org/files/irssi-%v.tar.bz2
Source: https://github.com/irssi/irssi/releases/download/%v/%n-%v.tar.xz
Source-MD5: b820760c3b4f3b0c24abe4db82b6366a
Type: perl 5.18.2
CompileScript: <<
#!/bin/sh -ex
	export ARCHFLAGS=""
	export perlpath=`perl -e 'print $ARGV[0]=~/PERL="(.*?)"/' '%c'`
	./configure \
		--prefix=%p \
		--enable-dependency-tracking \
		--with-modules \
		--with-ncurses=%p \
		--with-proxy \
		--enable-ipv6 \
		--with-perl-lib=%p/lib/perl5/%type_raw[perl] \
		--with-socks \
		--enable-ssl \
		PKG_CONFIG_PATH="%p/lib/glib-2.0/pkgconfig-strict:$PKG_CONFIG_PATH"
	make perlpath="ARCHFLAGS=\"\" $perlpath"
	fink-package-precedence .
<<
NoPerlTests: true
DocFiles: AUTHORS COPYING ChangeLog NEWS TODO
UpdatePOD: true
Description: Modular IRC client
DescPackaging: <<
	Formerly maintained by Max Horn
<<
Homepage: http://www.irssi.org/
License: GPL/OpenSSL
<<
