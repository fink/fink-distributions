PatchScript: <<
	%{default_script}
	perl -pi -e 's|INSTALL_DATADIR|"%p/share"|' \
		src/interfaces/gtk/ec_gtk.c \
		src/ec_debug.c \
		src/ec_file.c \
		src/ec_sslwrap.c
	perl -pi -e 's|INSTALL_LIBDIR|"%p/lib"|' src/interfaces/gtk/ec_gtk_plugins.c src/ec_plugins.c
	perl -pi -e 's|INSTALL_SYSCONFDIR|"%p/etc"|' src/ec_file.c
