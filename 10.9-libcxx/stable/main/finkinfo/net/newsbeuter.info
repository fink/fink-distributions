PatchScript: <<
#!/bin/sh -ev
	sed -e 's,@PREFIX@,%p,g' < %{PatchFile} | patch -p1
	for file in \
		podbeuter-segfault-fix \
		translation-fix \
		fix-highlight \
		fix-leak \
	; do
		echo "applying $file"
		patch -p1 < ../debian/patches/$file
	done
<<
