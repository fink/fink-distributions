+    {
+        octet_iterator end = it;
+        while (internal::is_trail(*(--it))) 
+            if (it == pass_start)
+                throw invalid_utf8(*it); // error - no lead byte in the sequence
+        octet_iterator temp = it;
+        return next(temp, end);
+    }
