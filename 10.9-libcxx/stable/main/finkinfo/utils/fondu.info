PatchScript: <<
	#!/bin/sh -ev
	%{default_script}
	export DARWIN_MAJOR_VERSION=`uname -r | cut -d. -f1`
	if [ $DARWIN_MAJOR_VERSION -ge 20 ] ; then
		perl -pi -e 's|/System/Library/Frameworks/CoreServices.framework/CoreServices||g' Makefile.in
	fi
<<
