Package: qemu
Version: 2.2.1
Revision: 3
Description: Fast machine emulator and virtualizer
License: GPL

Source: http://wiki.qemu-project.org/download/%n-%v.tar.bz2
Source-MD5: 833ff4457062456d38d6567f802ffef4

BuildDepends: <<
  cyrus-sasl2.3-dev,
  fink-package-precedence,
  glib2-dev,
  gnutls30,
  gtk+2-dev,
  libgettext8-dev,
  libcurl4,
  libiconv-dev,
  libpng16,
  libjpeg9,
  libssh2.1,
  libusb1,
  pixman,
  pkgconfig
<<
Depends: <<
  cyrus-sasl2.3-shlibs,
  glib2-shlibs,
  gnutls30-shlibs,
  gtk+2-shlibs,
  libgettext8-shlibs,
  libcurl4-shlibs,
  libpng16-shlibs,
  libjpeg9-shlibs,
  libusb1-shlibs,
  libssh2.1-shlibs,
  pixman-shlibs
<<

ConfigureParams: (%m = i386) --cpu=%m

CompileScript: <<
#!/bin/sh -ev
  mkdir build
  cd build
  ../configure %c  --extra-ldflags=" -L%p/lib `pkg-config --libs-only-L x11` "
  make
  fink-package-precedence --prohibit-bdep=%n --depfile-ext='\.d' .
<<

InstallScript: <<
#!/bin/sh -ev
  cd build
  make install prefix=%i     \
    sharedir=%i/share/qemu   \
    datadir=%i/share/qemu    \
    mandir=%i/share/man      \
    docdir=%i/share/doc/qemu \
    bindir=%i/bin
<<

