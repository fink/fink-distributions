Source: http://www.microbizz.nl/gpc332d1.src.tar.bz2
SourceDirectory: %n-%v-sources
Source-MD5: dff17bc857faae782a1303055ca89f9a
NoSetLDFLAGS: true
NoSetCPPFLAGS: true
ConfigureParams: --enable-languages=c,pascal --enable-threads=posix --infodir=%i/share/info --mandir=%i/share/man --target=powerpc-apple-darwin
