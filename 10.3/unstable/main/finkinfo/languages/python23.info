 ln -s %p/bin/python2.3 %i/bin/python
 ln -s %p/bin/pydoc2.3 %i/bin/pydoc 
 ln -s %p/bin/idle2.3 %i/bin/idle
 ln -s %p/share/man/man1/python23.1 %i/share/man/man1/python.1
