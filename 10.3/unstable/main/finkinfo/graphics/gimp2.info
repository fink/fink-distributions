#!/bin/sh -ev
export PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig/"
  if [ "%type_raw[-noprint]" == "-noprint" ]; then
   ./configure %c --disable-print
  else
   ./configure %c --enable-print
  fi
make
<<

