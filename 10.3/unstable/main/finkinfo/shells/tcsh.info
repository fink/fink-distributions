 make install prefix=%i
 make install.man prefix=%i
 mkdir -p %i/share/man/man1
 mv %i/man/man1/tcsh.1 %i/share/man/man1
 rm -r %i/man
 mkdir -p %i/share/doc/%n
 mv tcsh.html %i/share/doc/%n/html
<<
