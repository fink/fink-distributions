Package: libcdk
Version: 4.9.10
Revision: 1
Source: http://www.netsw.org/system/libs/term/cdk/cdk-%v.tar.gz
Source-MD5: 9aa707df4323d89a014129a20a20efd4
NoSetLDFlags: true
NoSetCPPFlags: true
SetCFlags: -fno-common
Depends: %N-shlibs
BuildDepends: fileutils
CompileScript: <<
rm config.cache
./configure %c
make
gcc -dynamiclib -o libcdk.4.9.10.dylib *.o -compatibility_version 4 -current_version 4.9.10 -install_name %p/lib/libcdk.4.dylib -L/usr/lib -lncurses -ltermcap
<<
InstallScript: <<
mkdir -p %i/include/cdk
mkdir -p %i/lib
mkdir -p %i/share/man/man3
make install INSTALL_DIR=%i MAN_DIR=%i/share/man/man3 CDKREADME=""
%p/bin/install -m 644 libcdk.4.9.10.dylib %i/lib
ln -sf libcdk.4.9.10.dylib %i/lib/libcdk.4.dylib
ln -sf libcdk.4.dylib %i/lib/libcdk.dylib
<<
Splitoff: <<
Package: %N-shlibs
Description: Shared libraries for libcdk
Files: lib/libcdk.4.9.10.dylib lib/libcdk.4.dylib
Shlibs: %p/lib/libcdk.4.dylib 4.0.0 %n (>= 4.9.10-1)
DocFiles: COPYING
<<
