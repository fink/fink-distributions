Package: sodipodi
Version: 0.34
Revision: 12
Maintainer: Peter O'Gorman <peter@pogma.com> 
Depends: pango1-shlibs, gtk+2-shlibs, libart2-shlibs, libxml2-shlibs, libpng3-shlibs, popt-shlibs, atk1-shlibs
BuildDepends: atk1, pkgconfig, pango1-dev, gtk+2-dev, libart2, libxml2, libpng3, popt, gettext-dev, gettext-bin, libiconv-dev
Source: mirror:sourceforge:%n/%n-%v.tar.gz 
Source-MD5: 396cd78526e5a8102fd11114f45a70fe
Patch: %n.patch
ConfigureParams: --mandir=%i/share/man --with-xinerama --with-xft --disable-dependency-tracking
NoSetLDFlags: true
NoSetCppFlags: true
SetCPPFlags: -no-cpp-precomp
CompileScript: <<
#!/bin/sh -x
LIBRARY_PATH=/usr/X11R6/lib:%p/lib
CPATH=%p/include
PATH="/usr/X11R6/bin:"$PATH
export LIBRARY_PATH
export CPATH
export LDFLAGS
export PATH
./configure %c
find . -name Makefile -exec perl -pi.bak -e 's#-[LlI](%p/lib|%p/include|%p/include/freetype2|m|pthread|c)\s# #g' {} \;
perl -pi.bak -e 's#-L%p/lib# #' libtool
perl -pi -e 's,^sys_lib_search_path_spec=",sys_lib_search_path_spec="/usrX11R6/lib %p/lib ,g' libtool
make
<<
