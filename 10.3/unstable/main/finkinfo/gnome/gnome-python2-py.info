CompileScript: <<
(export PYTHON='%p/bin/python%type_raw[python]'; ./configure %c; make)
(export CPPFLAGS='-I%p/include'; export LDFLAGS='-L%p/lib -lgobject-2.0'; %p/bin/python%type_raw[python] setup.py build)
<<
InstallScript: <<
 make install prefix=%i
 %p/bin/python%type_raw[python] setup.py install --prefix=%i
<<
