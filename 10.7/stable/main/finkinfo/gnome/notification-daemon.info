ConfigureParams: --mandir=%p/share/man --libexecdir=%p/bin --disable-static --enable-dependency-tracking --disable-schemas-install PKG_CONFIG_PATH="%p/lib/glib-2.0/pkgconfig-strict:$PKG_CONFIG_PATH"
