CompileScript: <<
#!/bin/sh -ex
	export lt_cv_sys_max_cmd_len=65536
	./configure %c --with-java=$JAVA_HOME
	make
<<
InfoTest: <<
	TestScript: make check || exit 2
<<
InstallScript: <<
#!/bin/sh -ex
	make install DESTDIR="%d"
<<
