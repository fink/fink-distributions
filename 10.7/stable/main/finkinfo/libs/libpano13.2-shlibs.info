	libjpeg9,
	libpng16,
	libtiff5,
	system-java-dev (>= 1.6-1)
<<
NoSetLDFLAGS: true
ConfigureParams: <<
	--mandir=%p/share/man \
	--infodir=%p/share/info \
	--with-zlib=/usr \
	--with-png=%p \
	--with-jpeg=%p \
	--with-tiff=%p
<<
