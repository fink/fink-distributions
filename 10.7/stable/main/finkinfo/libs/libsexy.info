	atk1 (>= 1.32.0-1),
	cairo (>= 1.12.14-1),
	fink-package-precedence,
	fontconfig2-dev (>= 2.10.0-1),
	freetype219 (>= 2.4.11-1),
	glib2-dev (>= 2.22.0-1),
	gtk+2-dev (>= 2.18.0-1),
	libgettext8-dev,
	libiconv-dev,
	libxml2 (>= 2.9.1-1),
	pango1-xft2-ft219-dev (>= 1.24.5-4),
	pkgconfig (>= 0.23),
	x11-dev
<<
BuildDependsOnly: true
Source: http://releases.chipx86.com/%n/%n/%n-%v.tar.bz2
