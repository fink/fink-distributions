Info3: <<
Package: libspatialite5
Version: 4.0.0
Revision: 2
Description: GIS extensions and tools to SQLite
License: OSI-Approved
Homepage: http://www.gaia-gis.it/spatialite/
Maintainer: BABA Yoshihiko <babayoshihiko@mac.com>
DescDetail: <<
  The SpatiaLite extension enables SQLite to support 
spatial data too [aka GEOMETRY], in a way conformant 
to OpenGIS specifications.
<<
Conflicts: libspatialite1
Replaces: libspatialite1, %N-shlibs (<< 2.3.1-14)

Depends: <<
  libspatialite5-shlibs (=%v-%r)
<<
BuildDepends: <<
  fink (>= 0.28), 
  readline5, libncurses5, libiconv-dev,
  proj, libgeos3.3.3,
  libfreexl1-dev
<<
BuildConflicts: libgeos2, libgeos3, libgeosc1, libgeos3.2.0, libgeos3.2.2, libgeos3.3.1
BuildDependsOnly: True

# Unpack Phase.

Source: http://www.gaia-gis.it/gaia-sins/libspatialite-sources/libspatialite-%v.tar.gz
Source-MD5: 8040ce4e39913e7d284675c0f15d270d

SetCPPFLAGS: -Os
SetLDFLAGS: -lcharset
ConfigureParams: <<
	--target=macosx --with-proj-include=%p/include --with-proj-lib=%p/lib \
	--with-geosconfig=%p/opt/libgeos3.3.3/bin/geos-config
<<

CompileScript: <<
#!/bin/sh -xe
  # Set up Libraries
  ./configure %c
  
  # 4.0.0
  perl -pi -e "s|SUBDIRS = src test examples|SUBDIRS = src test|g" Makefile
  # perl -pi -e "s|CPPFLAGS = -Os -I%p/include|CPPFLAGS = -Os -I%p/include -I%p/opt/libgeos3.3.3/include|g" examples/Makefile
  
  make
<<

# Install Phase.
InstallScript: <<
#!/bin/sh -xe
  # Install Libraries
  make install prefix=%i
<<
DocFiles: AUTHORS COPYING INSTALL README

SplitOff: <<
  Package: %N-shlibs
  Description: Shared libraries for libspatialite5 package
  Depends: <<
    libgeos3.3.1-shlibs,
    libiconv,
    proj-shlibs,
    libfreexl1-shlibs
  <<  
  Files: <<
    lib/libspatialite.5.dylib
  <<
  Suggests: librasterlite5-shlibs
  Shlibs: <<
    %p/lib/libspatialite.5.dylib  6.0.0 %n (>= 4.0.0-1)
  <<
  DocFiles: AUTHORS COPYING INSTALL README
# End of SplitOff
<<

# End of Info3
<<
