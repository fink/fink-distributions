	Package: libpano13-bin
	Description: Panorama tools utilities
	Replaces: <<
		libpano13.2 (<= 2.9.18-2)
	<<
	Depends: <<
		%N (>= %v-%r),
		libjpeg9-shlibs (>= 9-3),
		libpng16-shlibs,
		libtiff5-shlibs,
		system-java (>= 1.6-1)
	<<
	BuildDependsOnly: true
	Files: <<
		bin
		share/man
	<<
	DocFiles: AUTHORS COPYING ChangeLog INSTALL NEWS README*
<<
