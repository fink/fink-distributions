Package: libpano13.3-shlibs
Version: 2.9.19
Revision: 2
Distribution: 10.9, 10.10
Description: Library for photo stitching
License: GPL
Maintainer: Hanspeter Niederstrasser <nieder@users.sourceforge.net>
Source: mirror:sourceforge:panotools/libpano13-%v.tar.gz
Source-MD5: 1e4ce42f58a3f22c0a97d0b7a8e1dbb0
Depends: <<
	libjpeg9-shlibs (>= 9-3),
	libpng16-shlibs,
	libtiff5-shlibs
<<
BuildDepends: <<
	libjpeg9,
	libpng16,
	libtiff5,
	system-java-dev (>= 1.6-1)
<<
NoSetLDFLAGS: true
ConfigureParams: <<
	--mandir=%p/share/man \
	--infodir=%p/share/info \
	--with-zlib=/usr \
	--with-png=%p \
	--with-jpeg=%p \
	--with-tiff=%p
<<
Type: java(1.6)
PatchScript: <<
	# Patch configure to not link like Puma on Yosemite
	perl -pi -e 's|10\.\[012\]\*|10.[012][,.]*|g' configure
<<
CompileScript: <<
#!/bin/sh -ex
	export lt_cv_sys_max_cmd_len=65536
	%{default_script}
<<
InfoTest: <<
	TestScript: make check || exit 2
<<
InstallScript: <<
#!/bin/sh -ex
	make install DESTDIR="%d"
<<
Shlibs: %p/lib/libpano13.3.dylib 4.0.0 %n (>= 2.9.19-1)
SplitOff: <<
	Package: libpano13.3-dev
	Description: Dev files for libpano13.3
	Depends: <<
		%N (= %v-%r)
	<<
	Conflicts: libpano12, libpano13, libpano13.2, libpano13.3-dev
	Replaces: libpano12, libpano13, libpano13.2, libpano13.3-dev
	BuildDependsOnly: true
	Files: <<
		include
		lib/libpano13.dylib
		lib/libpano13.la
		lib/pkgconfig
	<<
	DocFiles: AUTHORS COPYING ChangeLog INSTALL NEWS README*
<<
