CompileScript: <<
	#!/bin/bash -ev
	export CPATH="%p/include"
	export F77=no

	./configure %c
	make X_LIBS="" STATIC_LIBS=' -lgif -ltiff -ljpeg -lpng16 -lfreetype -lxml2 -lintl -lspiro -luninameslist -lz'
	fink-package-precedence --depfile-ext='\.d' .
<<
InstallScript: <<
	make install DESTDIR=%d
	/bin/rm -rf %i/include
	/bin/ln -sf %p/bin/fontforge fontforge/FontForge.app/Contents/MacOS/FontForge
	/bin/mkdir -p %i/share/applications
	/bin/mkdir -p %i/share/fontforge
	/bin/mkdir -p %i/share/mime/packages
	/bin/cp Packaging/fontforge.desktop %i/share/applications
	/bin/cp Packaging/icons/48x48/apps/fontforge.png %i/share/fontforge
	/bin/cp Packaging/fontforge.xml %i/share/mime/packages
<<

