PatchScript: <<
	perl -pi -e 's,/usr,\${CMAKE_INSTALL_PREFIX},' CMakeLists.txt
	# Fix bad pngs for libpng16.
	find res -name "*.png" -print0 | while read -d $'\0' file; do convert "$file" -strip "$file"; done
	perl -pi -e 's/Q_OS_LINUX/Q_OS_MAC/' src/formats.cpp
<<

