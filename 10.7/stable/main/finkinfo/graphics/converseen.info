	imagemagick (>= 6.8.8.10-1),
	libmagick++6.q16.3-dev (>= 6.8.8.10-1),
	libmagickcore6.q16.2-dev (>= 6.8.8.10-1),
	libmagickwand6.q16.2-dev (>= 6.8.8.10-1),
	qt4-base-mac-linguist (>= 4.8.6-1),
	qt4-base-mac (>= 4.8.6-1)
<<
