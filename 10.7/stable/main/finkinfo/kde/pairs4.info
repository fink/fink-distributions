PatchScript: <<
	%{default_script}
	mkdir -p iconseditor
	cp icons/CMakeLists.txt iconseditor/CMakeLists.txt
	mv icons/hi{16,22,24,32,36,48,64,96,128,192,256}-apps-pairseditor.png icons/hisc-apps-pairseditor.svgz iconseditor
