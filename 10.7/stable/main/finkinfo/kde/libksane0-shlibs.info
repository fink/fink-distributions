Type: kde (mac)
License: GPL/LGPL
Maintainer: Hanspeter Niederstrasser <nieder@users.sourceforge.net>

Depends: <<
	kdelibs4-%type_pkg[kde]-shlibs (>= %v-1),
	libksane-%type_pkg[kde]-data (>= %v-%r),
	qt4-base-%type_pkg[kde]-qtcore-shlibs (>= 4.8.5-1),
	qt4-base-%type_pkg[kde]-qtgui-shlibs (>= 4.8.5-1),
	sane-backends,
	sane-backends-shlibs
<<
BuildDepends: <<
	automoc-%type_pkg[kde] (>= 0.9.89-0.999999.32),
	cmake (>= 2.8.10-1),
	fink (>= 0.34),
	fink-package-precedence,
	kde4-buildenv (>= 4.13.1-1),
	kdelibs4-%type_pkg[kde]-dev (>= %v-1),
	phonon-%type_pkg[kde] (>= 4.5.0-1),
	pkgconfig (>= 0.23-1),
	qt4-base-%type_pkg[kde] (>= 4.8.5-1),
	sane-backends-dev,
	system-openssl-dev
<<
RuntimeDepends: <<
	kdelibs4-%type_pkg[kde] (>= %v-1)
<<

Source: mirror:kde:stable/%v/src/libksane-%v.tar.xz
Source-MD5: ace260cbc237ae9c8d15f2ea902aee67

GCC: 4.0
CompileScript: <<
	#!/bin/sh -ev
	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4.12-buildenv.sh
	
	export CC="$CC -MD" CXX="$CXX -MD"
	mkdir -p build
	pushd build
	cmake \
		$KDE4_CMAKE_ARGS \
	..
	make
	popd
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=libksane0-%type_pkg[kde]-dev .
<<

InstallScript: <<
#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR="%d"
	popd
<<
Shlibs: <<
	%p/opt/kde4/%type_pkg[kde]/lib/libksane.0.dylib	0.0.0 %N (>= 4.12.2-1)
<<
