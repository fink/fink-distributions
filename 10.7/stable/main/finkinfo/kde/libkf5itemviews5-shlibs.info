	libkf5itemviews-data (>= %v-%r),
	qt5-mac-qtcore-shlibs,
	qt5-mac-qtgui-shlibs,
	qt5-mac-qtwidgets-shlibs
<<
BuildDepends: <<
	cmake,
	extra-cmake-modules (>= 1.6.0),
	fink (>= 0.34),
	fink-buildenv-modules (>= 0.1.2),
	fink-package-precedence,
	qt5-mac-linguist,
	qt5-mac-qtbase,
	qt5-mac-qttools,
	qt5-mac-qttools-dev-tools
<<
Source: mirror:kde:stable/frameworks/5.6/kitemviews-%v.tar.xz
