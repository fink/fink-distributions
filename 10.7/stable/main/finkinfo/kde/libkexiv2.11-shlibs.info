Source: mirror:kde:stable/%v/src/libkexiv2-%v.tar.xz
Source-MD5: 1323f24d3206cecd6218faed37d5cf84

GCC: 4.0
CompileScript: <<
	#!/bin/sh -ev
	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4.12-buildenv.sh
	
	export CC="$CC -MD" CXX="$CXX -MD"
	mkdir -p build
	pushd build
	cmake \
		$KDE4_CMAKE_ARGS \
	..
	make
	popd
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=libkexiv2.11-%type_pkg[kde]-dev .
<<

InstallScript: <<
#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR="%d"
	popd
<<
