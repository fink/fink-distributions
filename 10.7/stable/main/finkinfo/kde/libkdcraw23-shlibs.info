Package: libkdcraw23-%type_pkg[kde]-shlibs
Version: 4.13.1
Revision: 1
Description: KDE4 - RAW picture decoding library
Type: kde (mac)
License: GPL/LGPL
Maintainer: Hanspeter Niederstrasser <nieder@users.sourceforge.net>

Depends: <<
	kdelibs4-%type_pkg[kde]-shlibs (>= %v-1),
	libkdcraw-%type_pkg[kde]-data (>= %v-%r),
	libraw10-shlibs,
	qt4-base-%type_pkg[kde]-qtcore-shlibs (>= 4.8.5-1),
	qt4-base-%type_pkg[kde]-qtgui-shlibs (>= 4.8.5-1)
<<
BuildDepends: <<
	automoc-%type_pkg[kde] (>= 0.9.89-0.999999.32),
	cmake (>= 2.8.10-1),
	fink (>= 0.34),
	fink-package-precedence,
	kde4-buildenv (>= 4.13.1-1),
	kdelibs4-%type_pkg[kde]-dev (>= %v-1),
	libraw10-dev,
	phonon-%type_pkg[kde] (>= 4.5.0-1),
	pkgconfig (>= 0.23-1),
	qt4-base-%type_pkg[kde] (>= 4.8.5-1),
	system-openssl-dev
<<
RuntimeDepends: <<
	kdelibs4-%type_pkg[kde] (>= %v-1)
<<

Source: mirror:kde:stable/%v/src/libkdcraw-%v.tar.xz
Source-MD5: c25aeedc4dd68e37d358005a9b65a3e2

GCC: 4.0
CompileScript: <<
	#!/bin/sh -ev
	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4.12-buildenv.sh
	
	export CC="$CC -MD" CXX="$CXX -MD"
	mkdir -p build
	pushd build
	cmake \
		$KDE4_CMAKE_ARGS \
	..
	make
	popd
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=libkdcraw23-%type_pkg[kde]-dev .
<<

InstallScript: <<
#!/bin/sh -ev
	pushd build
		make install/fast DESTDIR="%d"
	popd
<<
Shlibs: <<
	%p/opt/kde4/%type_pkg[kde]/lib/libkdcraw.23.dylib	23.0.0 %N (>= 4.12.2-1)
<<
SplitOff: <<
	Package: libkdcraw23-%type_pkg[kde]-dev
	Description: KDE4 - Headers and dev files for libkdcraw23
	Depends: libkdcraw23-%type_pkg[kde]-shlibs (= %v-%r)
	BuildDependsOnly: true
	DocFiles: AUTHORS COPYING* README
	Files: <<
		opt/kde4/%type_pkg[kde]/include
