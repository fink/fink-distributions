Source: mirror:kde:stable/%v/src/kdeartwork-%v.tar.xz
Source-MD5: 444c3fea54711a840bca705ea90c8cb2
PatchScript: sed -e 's,@FINKPREFIX@,%p,g' %{PatchFile} | patch -p1
PatchFile: kdeartwork4.patch
PatchFile-MD5: a3a0af0369300f8037e93d1389a311de

CompileScript: <<
#!/bin/sh -ev

	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4.12-buildenv.sh

	export CC="$CC -MD" CXX="$CXX -MD"
	mkdir -p build
	pushd build
	cmake \
		$KDE4_CMAKE_ARGS \
		-DXSCREENSAVER_CONFIG_DIR:PATH="%p/share/xscreensaver" \
	..
	make
	popd
	fink-package-precedence --depfile-ext='\.d' --prohibit-bdep=%n .
<<

InstallScript: <<
#!/bin/sh -ev

	pushd build
		make install/fast DESTDIR="%d"
	popd

	mkdir -p %i/share/doc/installed-packages
	touch %i/share/doc/installed-packages/%N
	touch %i/share/doc/installed-packages/%N-base
<<
