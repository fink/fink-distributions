if [ $1 != "upgrade" ]; then
	[ -x %p/var/postgresql-9.2/remove-alternatives.sh ] && %p/var/postgresql-9.2/remove-alternatives.sh
	daemonic remove %N >/dev/null 2>&1 || :
fi
<<
