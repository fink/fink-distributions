InstallScript: <<
#!/bin/sh -xe

	# postgresql
	make -j1 install DESTDIR="%d" BE_DLLLIBS=%p/opt/postgresql-9.2/bin/postgres
	make -j1 -C contrib install DESTDIR="%d" BE_DLLLIBS=%p/opt/postgresql-9.2/bin/postgres

	ranlib %i/opt/postgresql-9.2/lib/*.a

	install -d -m 755 %i/share/doc/%N
	find contrib -name README.\* -exec cp {} %i/share/doc/%N/ \;

	install -d -m 755 %i/bin
	install -c -m 755 pgsql.sh %i/bin/pgsql.sh-9.2

	install -d -m 755 %i/var/postgresql-9.2
	echo "be sure to back up this database before any upgrades!" >> %i/var/postgresql-9.2/README

	install -d -m 755 %i/var/log
	ln -sf %p/var/postgresql-9.2/pgsql.log %i/var/log/pgsql-9.2.log

	for file in `ls -1 %i/opt/postgresql-9.2/bin/`; do
		echo "${file}" >> %i/var/postgresql-9.2/binary.list
	done

	cat <<END > %i/var/postgresql-9.2/remove-alternatives.sh
#!/bin/sh

for arg in "\$@"; do
	case \$arg in
		-h|--h|--he|--hel|--help)
			echo "usage: \$0 [-h]"
			echo ""
			echo "  -h, --help          this help"
			echo ""
			exit 0;
			;;
		*)
			echo "\$0: unknown argument '\$arg'"
			exit 1;
			;;
	esac
done

update-alternatives --remove "pgsql.sh" "%p/bin/pgsql.sh-9.2"

for tuple in %p/opt/postgresql-9.2/bin:binary.list; do
	TUPLE_PATH=\`echo \$tuple | cut -d: -f1\`
	TUPLE_FILE=\`echo \$tuple | cut -d: -f2\`

	for file in \`cat %p/var/postgresql-9.2/\${TUPLE_FILE}\`; do
		update-alternatives --remove "\${file}" "\${TUPLE_PATH}/\${file}"
	done
done

END

	cat <<END > %i/var/postgresql-9.2/update-alternatives.sh
#!/bin/sh

FORCE=0

for arg in "\$@"; do
	case \$arg in
		-h|--h|--he|--hel|--help)
			echo "usage: \$0 [-h] [-f]"
			echo ""
			echo "  -h, --help          this help"
#			echo "  -f, --force         force this version of PostgreSQL, even if there is a newer one"
			echo ""
			exit 0;
			;;
#		-f|--f|--fo|--for|--forc|--force)
#			FORCE=1
#			;;
		*)
			echo "\$0: unknown argument '\$arg'"
			exit 1;
			;;
	esac
done

update-alternatives --install "%p/bin/pgsql.sh" "pgsql.sh" "%p/bin/pgsql.sh-9.2" 92

for tuple in bin:binary.list; do
	TUPLE_PATH=\`echo \$tuple | cut -d: -f1\`
	TUPLE_FILE=\`echo \$tuple | cut -d: -f2\`

	for file in \`cat %p/var/postgresql-9.2/\${TUPLE_FILE}\`; do
		if [ -e "%p/opt/postgresql-9.2/\${TUPLE_PATH}/\${file}" ]; then
			#echo update-alternatives --install "%p/\${TUPLE_PATH}/\${file}" "\${file}" "%p/opt/postgresql-9.2/\${TUPLE_PATH}/\${file}" 92
			update-alternatives --install "%p/\${TUPLE_PATH}/\${file}" "\${file}" "%p/opt/postgresql-9.2/\${TUPLE_PATH}/\${file}" 92
		fi
	done
done

END

	chmod 755 %i/var/postgresql-9.2/*.sh
	perl -pi -e 's,^%d,,' %i/bin/pg_config*
<<
