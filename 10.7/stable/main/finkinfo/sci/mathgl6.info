Package: mathgl6
# 2.1.3.1 needs new libN=mathgl7
Version: 2.0.3
Revision: 6
# Does not build on 10.9
# 'forward' was not declared in this scope
Distribution: 10.7, 10.8
Description: Library for scientific graphics
License: GPL
Maintainer: Jack Fink <jackfink@users.sourceforge.net>
Depends: %N-shlibs (= %v-%r)
BuildDepends: <<
	cmake,
	gcc48-compiler,
	giflib,
	gsl (>= 1.12-1),
	libjpeg9,
	libpng16
<<
BuildDependsOnly: true
Conflicts: mathgl, mathgl6, mathgl7
Replaces: mathgl, mathgl6, mathgl7
Source: mirror:sourceforge:mathgl/mathgl-%v.tar.gz
Source-MD5: 37b7857594dd17306d34475afec87aa5
GCC: 4.0
SetCXXFLAGS: -I../include -I%p/include
SetCPPFLAGS: -I../include
SetCFLAGS: -I../include
SetCXX: %p/bin/g++-fsf-4.8

PatchScript: <<
	sed -i.bak 's|#include <stdio.h>|#include <stdio.h>\n#include <unistd.h>|g' src/export.cpp
<<

CompileScript: <<
	cmake . \
		-DCMAKE_INSTALL_PREFIX=%p \
		-DCMAKE_INSTALL_NAME_DIR=%p/lib \
		-Denable-jpeg=ON \
		-Denable-gif=ON \
		-Denable-gsl=ON
	make
	# possible useful options
	# enable-hdf5_18:BOOL=ON
	# enable-mpi:BOOL=ON
	# enable-pdf:BOOL=ON
	# enable-python:BOOL=ON
	# also has fltk, qt4, and wx widget options if really wanted
<<

InstallScript: make install DESTDIR=%d
DocFiles: AUTHORS COPY* ChangeLog* README*

Splitoff: <<
	Package: %N-shlibs
	Depends: <<
		gcc48-shlibs,
		giflib-shlibs,
		gsl-shlibs (>= 1.12-1),
		libjpeg9-shlibs,
		libpng16-shlibs,
		mathgl-data
	<<
	Files: <<
		lib/libmgl.6*dylib
		lib/libmgl-wnd.6*dylib
	<<
	Shlibs: <<
		%p/lib/libmgl.6.0.0.dylib 6.0.0 %n (>= 2.0-1)
		%p/lib/libmgl-wnd.6.0.0.dylib 6.0.0 %n (>= 2.0-1)
	<<
	DocFiles: COPYING
<<

Splitoff2: <<
	Package: %N-bin
	Depends: <<
		%N-shlibs (>= %v-%r),
		gcc48-shlibs,
		giflib-shlibs,
		gsl-shlibs,
		libjpeg9-shlibs,
		libpng16-shlibs,
	<<
	Conflicts: mathgl-bin, mathgl6-bin, mathgl7-bin
	Replaces: mathgl-bin, mathgl6-bin, mathgl7-bin
	Files: bin
	DocFiles: COPYING
<<

SplitOff3: <<
	Package: mathgl-data
	Description: Library for scientific graphs (data files)
	# mathgl/fonts moved to mathgl-data to allow other libN
	Replaces: mathgl-shlibs (<= 1.11.3-1), mathgl6-shlibs (<= 2.0-5)
	Files: <<
		share/mathgl/fonts
	<<
	DocFiles: COPYING
<<
Homepage: http://mathgl.sourceforge.net
DescDetail: <<
A free cross-platform library of fast C++ routines for plotting data 
in up to 3 dimensions. It can export plots to bitmaps and vector EPS, 
SVG, IDTF files.
<<
DescPackaging: <<
Older revisions included the fonts in the -shlibs splitoff and thus could not truly coexist.  Offloaded them into a new SplitOff following Debian's lead.
<<
