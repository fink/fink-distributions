	hdf5, 
	hdf5-18-gfortran, 
	hdf5.7-gfortran,
	hdf5.7-oldapi-gfortran,
	hdf5.8-gfortran
<<	
Conflicts: <<
	hdf5, 
	hdf5-18-gfortran,
	hdf5.7-gfortran, 
	hdf5.7-oldapi-gfortran,
	hdf5.8-gfortran
<<
