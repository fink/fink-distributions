Package: libctl
Version: 3.2.1
Revision: 1
Source: http://ab-initio.mit.edu/%n/%n-%v.tar.gz
Source-MD5: 0f18d282464d6129e74c20911194765c
BuildDepends: guile18-dev, gcc47-compiler, libtool2, libiconv-dev, gmp5
Depends: guile18, guile18-libs, guile18-shlibs, gcc47-shlibs, libtool2-shlibs, libiconv, gmp5-shlibs
BuildDependsOnly: true
ConfigureParams: --mandir=%p/share/man --disable-dependency-tracking F77=gfortran
CompileScript: <<
#!/bin/sh -ev
 export PATH=%p/share/guile/1.8/scripts/binoverride:$PATH
 ./configure %c
 make
<<
InstallScript: <<
#!/bin/sh -ev  
 make install DESTDIR=%d 
 cd examples && rm -f *.o
<<
