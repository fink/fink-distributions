# Patch
# Remove use of mallinfo (does not compile)
# Loosen precision to allow reading ECMWF grids
PatchScript: <<
  perl -pi.bak -e 's|HAVE_MALLINFO|DUMMY_MALLINFO|' libcdi/src/dmemory.c
  perl -pi.bak -e 's|0.001|0.002|g' libcdi/src/grid.c
<<

