Depends: bzip2-shlibs (>= 1.0), boost1.55-nopython-shlibs
BuildDepends: bzip2-dev, boost1.55-nopython, fink-package-precedence
GCC: 4.0

PatchScript: <<
sed -i.old -e s/-static// makefile
sed -i.old -e 's|man/man1|share/man/man1|' makefile
<<

SetCFLAGS: -MD
CompileScript: <<
	#!/bin/sh -ev

        echo "BOOST_LIB_SUFFIX = -mt-1_55" >make.config
        echo "BOOST_LIB_DIR    = %p/opt/boost-1_55/lib %p/lib" >>make.config
        echo "BOOST_INC_DIR    = %p/opt/boost-1_55/include %p/include" >>make.config
	DEST_DIR=%p make
	fink-package-precedence --depfile-ext='\.d' .
<<

InstallScript: <<
	#!/bin/sh -ev
	DEST_DIR=%i make install
<<
