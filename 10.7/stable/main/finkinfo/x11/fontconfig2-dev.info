ConfigureParams: --prefix=%p/lib/fontconfig2 --with-confdir=%p/etc/fonts --disable-docs --enable-dependency-tracking --with-cache-dir=%p/var/cache/fontconfig-2.4 --with-default-fonts=/System/Library/Fonts --with-add-fonts=/Library/Fonts,/Network/Library/Fonts,/System/Library/Fonts,/usr/X11/lib/X11/fonts,/usr/X11R6/lib/X11/fonts,/usr/share/fonts --disable-silent-rules --disable-static --mandir=%p/share/man
