CompileScript: <<
 #!/bin/sh -ev
 cd Python
 
 sipdir=%p/share/sip-py%type_pkg[python]/pyqt4-mac
 
 export PYTHONPATH=%p/lib/qt4%type_pkg[qt]/lib/python%type_raw[python]/site-packages
 
 %p/bin/python%type_raw[python] configure.py --qmake=%p/lib/qt4%type_pkg[qt]/bin/qmake --sip=%p/bin/sip --pyqt-sipdir=$sipdir --destdir=%p/lib/qt4%type_pkg[qt]/lib/python%type_raw[python]/site-packages/PyQt4
 make LFLAGS="-L%p/lib/system-openssl/lib -undefined dynamic_lookup -bundle -flat_namespace -mmacosx-version-min=10.7"
<<
InstallScript: <<
  #!/bin/sh -ev
  cd Python
  make install INSTALL_ROOT=%d
