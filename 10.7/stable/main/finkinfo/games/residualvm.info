# OpenGL hardcoded to use apple's Framework, but source wants things
# only available in x11's library; someone who cares can disentangle
# that...
ConfigureParams: <<
	--mandir=%p/share/man \
	--enable-plugins \
	--default-dynamic \
	--enable-release \
	--enable-verbose-build \
	--disable-alsa \
	--disable-vorbis \
	--disable-tremor \
	--disable-mad \
	--disable-flac \
	--disable-theoradec \
	--disable-faad \
	--disable-fluidsynth \
	--disable-sparkle \
	--disable-libunity \
	--disable-opengl
<<
